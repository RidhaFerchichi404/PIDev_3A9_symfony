{% extends 'front.html.twig' %}

{% block title %}My Profile{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-4">
            <div class="card mb-4">
                <div class="card-body text-center">
                    <img src="https://ui-avatars.com/api/?name={{ user.firstName }}+{{ user.lastName }}&background=FF5722&color=fff&size=150" 
                         alt="{{ user.firstName }}" class="rounded-circle img-fluid mb-3" style="width: 150px;">
                    <h5 class="my-2">{{ user.firstName }} {{ user.lastName }}</h5>
                    <p class="text-muted mb-1">{{ user.role|replace({'ROLE_': ''}) }}</p>
                    <p class="text-muted mb-4">{{ user.location ?: 'No location set' }}</p>
                    <div class="d-flex justify-content-center mb-2">
                        <button type="button" class="btn btn-primary me-2">Edit Profile</button>
                        <button type="button" class="btn btn-outline-primary">Change Password</button>
                    </div>
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Status</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                <span class="badge {{ user.isActive ? 'bg-success' : 'bg-secondary' }}">
                                    {{ user.isActive ? 'Active' : 'Inactive' }}
                                </span>
                            </p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Member Since</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.createdAt|date('d M, Y') }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Membership</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">
                                Expires: {{ user.subscriptionEndDate|date('d M, Y') }}
                                <a href="#" class="btn btn-sm btn-outline-success ms-2">Renew</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Profile Details -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Personal Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Full Name</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.firstName }} {{ user.lastName }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Email</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.email }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Phone</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.phoneNumber ?: 'Not provided' }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Age</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.age ?: 'Not provided' }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">Location</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.location ?: 'Not provided' }}</p>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-sm-3">
                            <p class="mb-0">CIN</p>
                        </div>
                        <div class="col-sm-9">
                            <p class="text-muted mb-0">{{ user.cin ?: 'Not provided' }}</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Recent Activity -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item mb-3">
                            <div class="d-flex">
                                <div class="me-3">
                                    <div class="bg-primary text-white rounded-circle p-2" style="width: 40px; height: 40px; text-align: center;">
                                        <i class="fas fa-dumbbell"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1">Booked: Yoga Flow Class</h6>
                                    <p class="text-muted small mb-0">May 24, 2023 · 10:00 AM</p>
                                </div>
                            </div>
                        </div>
                        <div class="timeline-item mb-3">
                            <div class="d-flex">
                                <div class="me-3">
                                    <div class="bg-success text-white rounded-circle p-2" style="width: 40px; height: 40px; text-align: center;">
                                        <i class="fas fa-user-check"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1">Membership Activated</h6>
                                    <p class="text-muted small mb-0">May 15, 2023 · 2:30 PM</p>
                                </div>
                            </div>
                        </div>
                        <div class="timeline-item">
                            <div class="d-flex">
                                <div class="me-3">
                                    <div class="bg-info text-white rounded-circle p-2" style="width: 40px; height: 40px; text-align: center;">
                                        <i class="fas fa-user-edit"></i>
                                    </div>
                                </div>
                                <div>
                                    <h6 class="mb-1">Profile Completed</h6>
                                    <p class="text-muted small mb-0">May 10, 2023 · 5:45 PM</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 