{% extends 'base.html.twig' %}

{% block title %}{{ post.description|length > 30 ? post.description|slice(0, 30) ~ '...' : post.description }}{% endblock %}
{% block section %}Front Office{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row">
            <!-- Most Commented Post (Left Sidebar) -->
            <div class="col-md-3">
                <div class="card mb-4 shadow sidebar-card">
                    <div class="card-header bg-light">
                        <h3 class="h5 mb-0">Most Commented Post</h3>
                    </div>
                    {% if mostCommentedPosts|length > 0 %}
                        {% set topPost = mostCommentedPosts|first %}
                        <div class="card-body p-0">
                            {% if topPost.image %}
                                <img src="{{ asset('uploads/posts/' ~ topPost.image) }}" class="card-img-top sidebar-post-image" alt="{{ topPost.description }}">
                            {% endif %}
                            <div class="p-3">
                                <h5 class="card-title">{{ topPost.description|length > 50 ? topPost.description|slice(0, 50) ~ '...' : topPost.description }}</h5>
                                <p class="card-text">
                                    <i class="fas fa-comments"></i> {{ topPost.comments|length }} comments<br>
                                    <small class="text-muted"><i class="fas fa-calendar-alt"></i> {{ topPost.dateU|date('M d, Y') }}</small>
                                </p>
                                <a href="{{ path('app_front_post_show', {'id': topPost.id}) }}" class="btn btn-primary btn-sm w-100 {% if topPost.id == post.id %}disabled{% endif %}">
                                    {% if topPost.id == post.id %}Current Post{% else %}Read Post{% endif %}
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="card-body">
                            <p class="text-center mb-0">No posts found</p>
                        </div>
                    {% endif %}
                </div>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-6">
                <a href="{{ path('app_front_post_index') }}" class="btn btn-outline-secondary mb-3">
                    <i class="fas fa-arrow-left"></i> Back to Posts
                </a>
                
                <div class="card mb-4 shadow post-item">
                    {% if post.image %}
                        <img src="{{ asset('uploads/posts/' ~ post.image) }}" class="card-img-top post-image" alt="{{ post.description }}">
                    {% endif %}
                    <div class="card-body">
                        <h1 class="card-title section-title">{{ post.description }}</h1>
                        <p class="card-text text-muted">
                            <i class="fas fa-calendar-alt"></i> {{ post.dateU|date('F d, Y') }} | 
                            <i class="fas fa-tag"></i> {{ post.type|capitalize }}
                        </p>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h3><i class="fas fa-comments"></i> Comments ({{ post.comments|length }})</h3>
                    <a href="{{ path('app_front_comment_new', {'id': post.id}) }}" class="btn btn-front">
                        <i class="fas fa-comment"></i> Add a Comment
                    </a>
                </div>

                <div class="card mb-4 shadow">
                    <div class="card-header bg-light">
                        <h2 class="h4 mb-0">Comments</h2>
                    </div>
                    <div class="card-body">
                        <a href="{{ path('app_front_comment_new', {'id': post.id}) }}" class="btn btn-primary mb-4">
                            <i class="fas fa-plus"></i> Add Comment
                        </a>

                        {% for comment in post.comments %}
                            <div class="card mb-3 shadow-sm">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <p class="text-muted mb-0">
                                                <small><i class="fas fa-calendar-alt"></i> {{ comment.date|date('F d, Y') }}</small>
                                            </p>
                                            {% if has_emoji(comment.comment) %}
                                                <span class="emoji-indicator">
                                                    <i class="fas fa-smile"></i> {{ count_emojis(comment.comment) }} emoji{% if count_emojis(comment.comment) > 1 %}s{% endif %}
                                                </span>
                                            {% endif %}
                                        </div>
                                        <form method="post" action="{{ path('app_front_comment_like', {'id': comment.id}) }}" class="d-inline">
                                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-thumbs-up"></i> Like ({{ comment.likes }})
                                            </button>
                                        </form>
                                    </div>
                                    <p class="card-text comment-content">{{ comment.comment|emojify|raw }}</p>
                                </div>
                            </div>
                        {% else %}
                            <div class="alert alert-info">
                                No comments yet. Be the first to comment!
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            
            <!-- Most Recent Post (Right Sidebar) -->
            <div class="col-md-3">
                <div class="card mb-4 shadow sidebar-card">
                    <div class="card-header bg-light">
                        <h3 class="h5 mb-0">Most Recent Post</h3>
                    </div>
                    {% if recentPosts|length > 0 %}
                        {% set latestPost = recentPosts|first %}
                        <div class="card-body p-0">
                            {% if latestPost.image %}
                                <img src="{{ asset('uploads/posts/' ~ latestPost.image) }}" class="card-img-top sidebar-post-image" alt="{{ latestPost.description }}">
                            {% endif %}
                            <div class="p-3">
                                <h5 class="card-title">{{ latestPost.description|length > 50 ? latestPost.description|slice(0, 50) ~ '...' : latestPost.description }}</h5>
                                <p class="card-text">
                                    <small class="text-muted"><i class="fas fa-calendar-alt"></i> {{ latestPost.dateU|date('M d, Y') }}</small>
                                </p>
                                <a href="{{ path('app_front_post_show', {'id': latestPost.id}) }}" class="btn btn-success btn-sm w-100 {% if latestPost.id == post.id %}disabled{% endif %}">
                                    {% if latestPost.id == post.id %}Current Post{% else %}Read Post{% endif %}
                                </a>
                            </div>
                        </div>
                    {% else %}
                        <div class="card-body">
                            <p class="text-center mb-0">No posts found</p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 