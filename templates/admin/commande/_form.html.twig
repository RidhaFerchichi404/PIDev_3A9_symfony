{{ form_start(form, {'attr': {'class': 'row g-3'}}) }}
    <div class="col-12">
        <div class="form-floating">
            {{ form_widget(form.produit, {'attr': {'class': 'form-select', 'placeholder': 'Product'}}) }}
            {{ form_label(form.produit) }}
            {{ form_errors(form.produit) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-floating">
            {{ form_widget(form.nomClient, {'attr': {'class': 'form-control', 'placeholder': 'Client name'}}) }}
            {{ form_label(form.nomClient) }}
            {{ form_errors(form.nomClient) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-floating">
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control', 'placeholder': 'Phone number'}}) }}
            {{ form_label(form.telephone) }}
            {{ form_errors(form.telephone) }}
        </div>
    </div>

    <div class="col-12">
        <div class="form-floating">
            {{ form_widget(form.adresseLivraison, {'attr': {'class': 'form-control', 'placeholder': 'Delivery address', 'style': 'height: 100px'}}) }}
            {{ form_label(form.adresseLivraison) }}
            {{ form_errors(form.adresseLivraison) }}
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-floating">
            {{ form_widget(form.quantite, {'attr': {'class': 'form-control', 'placeholder': 'Quantity'}}) }}
            {{ form_label(form.quantite) }}
            {{ form_errors(form.quantite) }}
        </div>
    </div>

    {% if form.statutCommande is defined %}
        <div class="col-md-6">
            <div class="form-floating">
                {{ form_widget(form.statutCommande, {'attr': {'class': 'form-select', 'placeholder': 'Status'}}) }}
                {{ form_label(form.statutCommande) }}
                {{ form_errors(form.statutCommande) }}
            </div>
        </div>
    {% endif %}

    <div class="col-12">
        <button class="btn btn-primary">
            <i class="bx bx-save me-1"></i>
            {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }} 