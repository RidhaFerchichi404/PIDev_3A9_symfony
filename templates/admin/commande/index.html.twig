{% extends 'admin/base.html.twig' %}

{% block page_title %}Orders Management{% endblock %}

{% block admin_content %}
    <!-- Orders List Card -->
    <div class="card">
        <div class="card-header border-bottom">
            <div class="d-flex justify-content-between align-items-center row py-3 gap-3 gap-md-0">
                <div class="col-md-4 order_status">
                    <h5 class="card-title mb-0">Orders List</h5>
                </div>
                <div class="col-md-8 product_status">
                    <div class="d-flex justify-content-md-end align-items-center">
                        <div class="me-3">
                            <select class="form-select" id="statusFilter">
                                <option value="">All Status</option>
                                <option value="En attente">Pending</option>
                                <option value="En cours">Processing</option>
                                <option value="Livrée">Delivered</option>
                                <option value="Annulée">Cancelled</option>
                            </select>
                        </div>
                        <a href="{{ path('app_admin_commande_new') }}" class="btn btn-primary">
                            <span class="tf-icons bx bx-plus me-1"></span>New Order
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-datatable table-responsive">
            <table class="table border-top" id="orderTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for commande in commandes %}
                    <tr>
                        <td>{{ commande.id }}</td>
                        <td>
                            <div class="d-flex justify-content-start align-items-center product-name">
                                <div class="avatar-wrapper me-3">
                                    <div class="avatar rounded-2 bg-label-secondary">
                                        <span class="avatar-initial rounded-2 bg-label-primary">
                                            <i class="bx bx-package"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="d-flex flex-column">
                                    <span class="text-body text-truncate">{{ commande.produit.nom }}</span>
                                    <small class="text-muted">{{ commande.produit.prix|number_format(2, '.', ',') }} DT</small>
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="d-flex flex-column">
                                <span class="text-body text-truncate">{{ commande.nomClient }}</span>
                                <small class="text-muted">{{ commande.telephone }}</small>
                            </div>
                        </td>
                        <td>{{ commande.dateCommande|date('Y-m-d H:i') }}</td>
                        <td>{{ commande.quantite }}</td>
                        <td>
                            {% set statusClass = {
                                'En attente': 'warning',
                                'En cours': 'info',
                                'Livrée': 'success',
                                'Annulée': 'danger'
                            } %}
                            <span class="badge bg-label-{{ statusClass[commande.statutCommande] ?? 'secondary' }}">
                                {{ commande.statutCommande }}
                            </span>
                        </td>
                        <td>
                            <div class="d-inline-block text-nowrap">
                                <a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}" class="btn btn-sm btn-icon">
                                    <i class="bx bx-show text-primary"></i>
                                </a>
                                <a href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}" class="btn btn-sm btn-icon">
                                    <i class="bx bx-edit text-warning"></i>
                                </a>
                                <form method="post" action="{{ path('app_admin_commande_delete', {'id': commande.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                                    <button class="btn btn-sm btn-icon">
                                        <i class="bx bx-trash text-danger"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7" class="text-center">No orders found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const statusFilter = document.getElementById('statusFilter');
            const orderTable = document.getElementById('orderTable');
            const rows = orderTable.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            statusFilter.addEventListener('change', function() {
                const selectedStatus = this.value;

                for (let row of rows) {
                    const statusCell = row.querySelector('td:nth-child(6)');
                    if (!statusCell) continue;

                    const status = statusCell.textContent.trim();
                    if (selectedStatus === '' || status === selectedStatus) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        });
    </script>
{% endblock %} 