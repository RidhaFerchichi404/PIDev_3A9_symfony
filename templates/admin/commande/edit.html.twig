{% extends 'admin/base.html.twig' %}

{% block page_title %}Edit Order{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Edit Order</h5>
                    <div class="btn-group">
                        <a href="{{ path('app_admin_commande_index') }}" class="btn btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Back to list
                        </a>
                        <a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}" class="btn btn-info">
                            <i class="bx bx-show me-1"></i> Show
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    {{ include('admin/commande/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
            </div>

            <div class="mt-3">
                <form method="post" action="{{ path('app_admin_commande_delete', {'id': commande.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                    <button class="btn btn-danger">
                        <i class="bx bx-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 