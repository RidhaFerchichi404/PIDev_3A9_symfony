{% extends 'admin/base.html.twig' %}

{% block page_title %}Order Details{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Order Details</h5>
                    <div class="btn-group">
                        <a href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}" class="btn btn-primary">
                            <i class="bx bx-edit me-1"></i> Edit
                        </a>
                        <a href="{{ path('app_admin_commande_index') }}" class="btn btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Back to list
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-7 col-12">
                            <dl class="row mb-0">
                                <dt class="col-sm-4 fw-semibold mb-3">Order ID:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.id }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Product:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.produit.nom }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Client Name:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.nomClient }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Phone:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.telephone }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Delivery Address:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.adresseLivraison }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Quantity:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.quantite }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Order Date:</dt>
                                <dd class="col-sm-8 mb-3">{{ commande.dateCommande|date('Y-m-d H:i') }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Status:</dt>
                                <dd class="col-sm-8 mb-3">
                                    {% set statusClass = {
                                        'En attente': 'warning',
                                        'En cours': 'info',
                                        'Livrée': 'success',
                                        'Annulée': 'danger'
                                    } %}
                                    <span class="badge bg-label-{{ statusClass[commande.statutCommande] ?? 'secondary' }}">
                                        {{ commande.statutCommande }}
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <form method="post" action="{{ path('app_admin_commande_delete', {'id': commande.id}) }}" onsubmit="return confirm('Are you sure you want to delete this order?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                    <button class="btn btn-danger">
                        <i class="bx bx-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 