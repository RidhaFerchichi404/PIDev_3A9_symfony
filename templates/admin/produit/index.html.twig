{% extends 'admin/base.html.twig' %}

{% block page_title %}Products Management{% endblock %}

{% block admin_content %}
    <!-- Products Grid Card -->
    <div class="card">
        <div class="card-header border-bottom">
            <div class="d-flex justify-content-between align-items-center row py-3 gap-3 gap-md-0">
                <div class="col-md-4 product_category">
                    <h5 class="card-title mb-0">Products List</h5>
                </div>
                <div class="col-md-8 product_status">
                    <div class="d-flex justify-content-md-end align-items-center">
                        <a href="{{ path('app_admin_produit_new') }}" class="btn btn-primary">
                            <span class="tf-icons bx bx-plus me-1"></span>Add Product
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            {% if produits|length > 0 %}
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    {% for produit in produits %}
                        <div class="col">
                            <div class="card h-100">
                                <div class="card-img-top" style="height: 200px; overflow: hidden;">
                                    {% if produit.imagePath %}
                                        <img src="{{ asset('uploads/images/' ~ produit.imagePath) }}" 
                                             class="img-fluid" 
                                             alt="{{ produit.nom }}"
                                             style="width: 100%; height: 100%; object-fit: cover;">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center h-100 bg-light">
                                            <i class="bx bx-image-alt" style="font-size: 4rem; color: #d9dee3;"></i>
                                        </div>
                                    {% endif %}
                                </div>
                                <div class="card-body">
                                    <h5 class="card-title">{{ produit.nom }}</h5>
                                    <p class="card-text text-muted mb-0">
                                        {{ produit.description|slice(0, 100) ~ (produit.description|length > 100 ? '...' : '') }}
                                    </p>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <span class="fw-semibold text-primary">{{ produit.prix|number_format(2, '.', ',') }} DT</span>
                                        <div class="stock-info">
                                            {% if produit.quantiteStock == 0 %}
                                                <span class="badge bg-danger">Out of Stock</span>
                                            {% elseif produit.quantiteStock < 10 %}
                                                <span class="badge bg-warning text-dark">Low Stock: {{ produit.quantiteStock }}</span>
                                            {% else %}
                                                <span class="badge bg-success">In Stock: {{ produit.quantiteStock }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                    <div class="product-actions mt-3">
                                        <a href="{{ path('app_admin_produit_show', {'id': produit.id}) }}" 
                                           class="btn btn-icon btn-sm btn-primary me-1" 
                                           data-bs-toggle="tooltip" 
                                           data-bs-placement="top" 
                                           title="View Details">
                                            <i class="bx bx-show"></i>
                                        </a>
                                        <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" 
                                           class="btn btn-icon btn-sm btn-warning me-1"
                                           data-bs-toggle="tooltip" 
                                           data-bs-placement="top" 
                                           title="Edit Product">
                                            <i class="bx bx-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_admin_produit_delete', {'id': produit.id}) }}" 
                                              class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this product?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                            <button class="btn btn-icon btn-sm btn-danger"
                                                    data-bs-toggle="tooltip" 
                                                    data-bs-placement="top" 
                                                    title="Delete Product">
                                                <i class="bx bx-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="bx bx-package" style="font-size: 4rem; color: #d9dee3;"></i>
                    </div>
                    <h6 class="text-muted">No products found</h6>
                    <a href="{{ path('app_admin_produit_new') }}" class="btn btn-primary mt-3">
                        <span class="tf-icons bx bx-plus me-1"></span>Add Your First Product
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .product-actions .btn-icon {
            width: 32px;
            height: 32px;
            padding: 0;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
        
        .card-img-top img {
            transition: transform 0.3s ease;
        }
        
        .card:hover .card-img-top img {
            transform: scale(1.05);
        }

        .stock-info {
            font-size: 0.875rem;
        }

        .stock-info .badge {
            padding: 0.5em 0.75em;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function(tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
{% endblock %} 