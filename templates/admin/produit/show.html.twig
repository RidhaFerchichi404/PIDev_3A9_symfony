{% extends 'admin/base.html.twig' %}

{% block page_title %}Product Details{% endblock %}

{% block admin_content %}
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Product Details</h5>
                    <div class="btn-group">
                        <a href="{{ path('app_admin_produit_edit', {'id': produit.id}) }}" class="btn btn-primary">
                            <i class="bx bx-edit me-1"></i> Edit
                        </a>
                        <a href="{{ path('app_admin_produit_index') }}" class="btn btn-secondary">
                            <i class="bx bx-arrow-back me-1"></i> Back to list
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <div class="row">
                        <div class="col-xl-5 col-12 mb-4 mb-xl-0">
                            <div class="card h-100">
                                <div class="card-body">
                                    {% if produit.imagePath %}
                                        <img src="{{ asset('uploads/images/' ~ produit.imagePath) }}" 
                                             class="img-fluid rounded" 
                                             alt="{{ produit.nom }}"
                                             style="width: 100%; height: auto; object-fit: cover;">
                                    {% else %}
                                        <div class="d-flex align-items-center justify-content-center h-100 bg-light rounded" style="min-height: 300px;">
                                            <i class="bx bx-image-alt" style="font-size: 4rem; color: #d9dee3;"></i>
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-7 col-12">
                            <dl class="row mb-0">
                                <dt class="col-sm-4 fw-semibold mb-3">ID:</dt>
                                <dd class="col-sm-8 mb-3">{{ produit.id }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Name:</dt>
                                <dd class="col-sm-8 mb-3">{{ produit.nom }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Description:</dt>
                                <dd class="col-sm-8 mb-3">{{ produit.description }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Category:</dt>
                                <dd class="col-sm-8 mb-3">{{ produit.categorie ?: 'N/A' }}</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Price:</dt>
                                <dd class="col-sm-8 mb-3">{{ produit.prix|number_format(2, '.', ',') }} DT</dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Stock:</dt>
                                <dd class="col-sm-8 mb-3">
                                    {% if produit.quantiteStock > 10 %}
                                        <span class="badge bg-label-success">In Stock ({{ produit.quantiteStock }})</span>
                                    {% elseif produit.quantiteStock > 0 %}
                                        <span class="badge bg-label-warning">Low Stock ({{ produit.quantiteStock }})</span>
                                    {% else %}
                                        <span class="badge bg-label-danger">Out of Stock</span>
                                    {% endif %}
                                </dd>

                                <dt class="col-sm-4 fw-semibold mb-3">Status:</dt>
                                <dd class="col-sm-8 mb-3">
                                    {% if produit.disponible %}
                                        <span class="badge bg-label-success">Available</span>
                                    {% else %}
                                        <span class="badge bg-label-danger">Unavailable</span>
                                    {% endif %}
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <form method="post" action="{{ path('app_admin_produit_delete', {'id': produit.id}) }}" onsubmit="return confirm('Are you sure you want to delete this product?');" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                    <button class="btn btn-danger">
                        <i class="bx bx-trash me-1"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
{% endblock %} 