{% extends 'base.html.twig' %}

{% block title %}New Comment{% endblock %}
{% block section %}Back Office{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="section-title">New Comment</h2>
            <a href="{{ path('app_admin_dashboard') }}" class="btn btn-primary">
                <i class="fas fa-tachometer-alt"></i> Back to Dashboard
            </a>
        </div>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Add New Comment</h1>
                    <a href="{{ path('app_admin_post_comments', {'id': post.id}) }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Comments
                    </a>
                </div>
                
                <div class="card mb-4">
                    <div class="card-header">
                        <strong>Post: {{ post.description|length > 50 ? post.description|slice(0, 50) ~ '...' : post.description }}</strong>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Posted on {{ post.dateU|date('Y-m-d') }} | Category: {{ post.type }}</p>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                            <div class="mb-3">
                                {{ form_label(form.comment, 'Comment') }}
                                {{ form_widget(form.comment, {'attr': {'class': 'form-control', 'rows': 5}}) }}
                                {{ form_errors(form.comment) }}
                            </div>
                            
                            <button type="submit" class="btn btn-success">Add Comment</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 