{% extends 'admin/base.html.twig' %}

{% block page_title %}Dashboard{% endblock %}

{% block admin_content %}
    <div class="row">
        <!-- Statistics -->
        <div class="col-lg-3 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <span class="avatar-initial rounded bg-label-primary">
                                <i class="bx bx-package"></i>
                            </span>
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Total Products</span>
                    <h3 class="card-title mb-2">{{ totalProducts }}</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <span class="avatar-initial rounded bg-label-success">
                                <i class="bx bx-cart"></i>
                            </span>
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Total Orders</span>
                    <h3 class="card-title mb-2">{{ totalOrders }}</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <span class="avatar-initial rounded bg-label-warning">
                                <i class="bx bx-time"></i>
                            </span>
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Pending Orders</span>
                    <h3 class="card-title mb-2">{{ pendingOrders }}</h3>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-6 mb-4">
            <div class="card">
                <div class="card-body">
                    <div class="card-title d-flex align-items-start justify-content-between">
                        <div class="avatar flex-shrink-0">
                            <span class="avatar-initial rounded bg-label-info">
                                <i class="bx bx-check-circle"></i>
                            </span>
                        </div>
                    </div>
                    <span class="fw-semibold d-block mb-1">Completed Orders</span>
                    <h3 class="card-title mb-2">{{ completedOrders }}</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">Recent Orders</h5>
            <a href="{{ path('app_admin_commande_index') }}" class="btn btn-primary btn-sm">View All</a>
        </div>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product</th>
                        <th>Client</th>
                        <th>Date</th>
                        <th>Quantity</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    {% for commande in recentOrders %}
                        <tr>
                            <td>{{ commande.id }}</td>
                            <td>{{ commande.produit.nom }}</td>
                            <td>{{ commande.nomClient }}</td>
                            <td>{{ commande.dateCommande|date('Y-m-d H:i') }}</td>
                            <td>{{ commande.quantite }}</td>
                            <td>
                                {% if commande.statutCommande == 'En attente' %}
                                    <span class="badge bg-label-warning">En attente</span>
                                {% elseif commande.statutCommande == 'En cours' %}
                                    <span class="badge bg-label-info">En cours</span>
                                {% else %}
                                    <span class="badge bg-label-success">Livr√©e</span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="{{ path('app_admin_commande_show', {'id': commande.id}) }}">
                                            <i class="bx bx-show me-1"></i> View
                                        </a>
                                        <a class="dropdown-item" href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}">
                                            <i class="bx bx-edit-alt me-1"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="7" class="text-center">No orders found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %} 