{% extends 'admin/base.html.twig' %}

{% block title %}Admin Dashboard{% endblock %}

{% block admin_content %}
    <div class="row mb-4">
        <!-- Total Products Card -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column">
                            <h5 class="card-title mb-0">Total Products</h5>
                        </div>
                        <div class="rounded-circle p-3 bg-light">
                            <i class="fas fa-box fa-2x text-primary"></i>
                        </div>
                    </div>
                    <h2 class="mb-0">{{ totalProducts }}</h2>
                </div>
            </div>
        </div>

        <!-- Total Orders Card -->
        <div class="col-md-6 col-lg-3 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div class="d-flex flex-column">
                            <h5 class="card-title mb-0">Total Orders</h5>
                        </div>
                        <div class="rounded-circle p-3 bg-light">
                            <i class="fas fa-shopping-cart fa-2x text-success"></i>
                        </div>
                    </div>
                    <h2 class="mb-0">{{ totalOrders }}</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card">
        <div class="card-header">
            <h5 class="card-title mb-0">Recent Orders</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Product</th>
                            <th>Client</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for order in recentOrders %}
                            <tr>
                                <td>{{ order.id }}</td>
                                <td>{{ order.produit.nom }}</td>
                                <td>{{ order.client.nom }}</td>
                                <td>{{ order.dateCommande|date('Y-m-d H:i') }}</td>
                                <td>
                                    <span class="badge bg-{{ order.status == 'En attente' ? 'warning' : (order.status == 'En cours' ? 'info' : 'success') }}">
                                        {{ order.status }}
                                    </span>
                                </td>
                                <td>
                                    <a href="{{ path('app_commande_show', {'id': order.id}) }}" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No orders found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %} 