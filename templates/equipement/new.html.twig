{% extends 'base.html.twig' %}

{% block title %}Create New Equipement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-lila">Create New Equipement</h1>

        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-lila text-white">
                <h5 class="card-title mb-0">Enter Equipement Details</h5>
            </div>

            <div class="card-body">
                <!-- Start of the form -->
                {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}

                <!-- Equipement Name -->
                <div class="mb-4">
                    <label for="equipementName" class="form-label">Equipement Name</label>
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control form-control-lg input-color', 'placeholder': 'Enter equipement name', 'id': 'equipementName'}}) }}
                    {{ form_errors(form.nom) }}
                </div>

                <!-- Fonctionnement -->
                <div class="mb-4">
                    <label for="fonctionnement" class="form-label">Fonctionnement</label>
                    <div class="form-check">
                        {{ form_widget(form.fonctionnement, {'attr': {'class': 'form-check-input', 'id': 'fonctionnement'}}) }}
                        <label class="form-check-label" for="fonctionnement">
                            Is the equipement working?
                        </label>
                    </div>
                    {{ form_errors(form.fonctionnement) }}
                </div>

                <!-- Prochaine VÃ©rification -->
                <div class="mb-4">
                    <label for="prochaineVerification" class="form-label">Prochaine VÃ©rification</label>
                    {{ form_widget(form.prochaine_verification, {'attr': {'class': 'form-control form-control-lg input-color', 'id': 'prochaineVerification', 'type': 'date'}}) }}
                    {{ form_errors(form.prochaine_verification) }}
                </div>

                <!-- DerniÃ¨re VÃ©rification -->
                <div class="mb-4">
                    <label for="derniereVerification" class="form-label">DerniÃ¨re VÃ©rification</label>
                    {{ form_widget(form.derniere_verification, {'attr': {'class': 'form-control form-control-lg input-color', 'id': 'derniereVerification', 'type': 'date'}}) }}
                    {{ form_errors(form.derniere_verification) }}
                </div>

                <!-- Salle -->
                <div class="mb-4">
                    <label for="salle" class="form-label">Salle</label>
                    {{ form_widget(form.salle, {'attr': {'class': 'form-control form-control-lg input-color', 'id': 'salle'}}) }}
                    {{ form_errors(form.salle) }}
                </div>

                <!-- Id User -->
                <div class="mb-4">
                    <label for="id_user" class="form-label">Id User</label>
                    {{ form_widget(form.id_user, {'attr': {'class': 'form-control form-control-lg input-color', 'id': 'id_user'}}) }}
                    {{ form_errors(form.id_user) }}
                </div>

                <!-- Submit Button -->
                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <span role="img" aria-label="save">ðŸ’¾</span> Create Equipement
                    </button>
                </div>

                {{ form_end(form) }}
                <!-- End of the form -->
            </div>

            <div class="card-footer d-flex justify-content-between align-items-center">
                <!-- Back Button -->
                <a href="{{ path('app_equipement_index') }}" class="btn btn-outline-secondary btn-sm">
                    <i class="ri-arrow-left-line"></i> Back to List
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block css %}
    <style>
        .text-lila {
            color: #6f42c1; /* Purple color for headings */
        }

        .card {
            border-radius: 12px;
            background-color: #ffffff;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #6f42c1;
            color: white;
            border-radius: 12px 12px 0 0;
        }

        .card-body {
            padding: 25px;
        }

        .form-control-lg {
            font-size: 1.1rem;
            padding: 15px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .input-color {
            background-color: #f5f0ff;
            border: 1px solid #e1d8fc;
        }

        .form-control-lg:focus {
            box-shadow: 0 0 8px rgba(111, 66, 193, 0.4);
            border-color: #6f42c1;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            border-radius: 8px;
            padding: 12px;
            font-size: 1.2rem;
            transition: background-color 0.3s ease;
        }

        .btn-success:hover {
            background-color: #218838;
            cursor: pointer;
        }

        .btn-outline-secondary {
            color: #6f42c1;
            border-color: #6f42c1;
            border-radius: 8px;
        }

        .btn-outline-secondary:hover {
            background-color: #6f42c1;
            color: white;
            cursor: pointer;
        }

        .card-footer {
            background-color: #f9f9f9;
            border-radius: 0 0 12px 12px;
            border-top: 1px solid #ddd;
        }

        .d-grid {
            display: grid;
            gap: 15px;
        }

        .btn-sm {
            font-size: 1rem;
            padding: 8px;
        }

        .btn-lg {
            font-size: 1.2rem;
            padding: 15px;
        }
    </style>
{% endblock %}
