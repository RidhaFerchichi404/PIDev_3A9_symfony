{% extends 'front.html.twig' %}

{% block title %}Réinitialiser le mot de passe{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .reset-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 2rem 0;
    }
    
    .reset-password-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        overflow: hidden;
        animation: fadeIn 0.5s ease;
    }
    
    .reset-password-header {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-blue));
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
    }
    
    .reset-password-header h1 {
        margin-bottom: 0.5rem;
        font-size: 1.8rem;
    }
    
    .reset-password-body {
        padding: 2rem;
    }
    
    .reset-password-icon {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
    
    .reset-password-icon i {
        font-size: 2.5rem;
        color: white;
    }
    
    .btn-save {
        background: linear-gradient(to right, var(--accent-green), #4CAF50);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 50px;
        transition: all 0.3s;
        width: 100%;
    }
    
    .btn-save:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(138, 43, 226, 0.25);
    }
    
    .password-strength-meter {
        height: 5px;
        background-color: #eee;
        margin-top: 8px;
        border-radius: 5px;
        overflow: hidden;
    }
    
    .password-strength-meter-fill {
        height: 100%;
        border-radius: 5px;
        transition: width 0.3s, background-color 0.3s;
    }
    
    .password-strength-text {
        font-size: 0.8rem;
        margin-top: 5px;
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const passwordInput = document.getElementById('password');
        const strengthMeterFill = document.querySelector('.password-strength-meter-fill');
        const strengthText = document.querySelector('.password-strength-text');
        
        if (passwordInput) {
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                let strength = 0;
                let message = '';
                
                if (password.length >= 6) strength += 1;
                if (password.length >= 10) strength += 1;
                if (/[A-Z]/.test(password)) strength += 1;
                if (/[0-9]/.test(password)) strength += 1;
                if (/[^A-Za-z0-9]/.test(password)) strength += 1;
                
                // Update the UI based on password strength
                switch(strength) {
                    case 0:
                        strengthMeterFill.style.width = '0%';
                        strengthMeterFill.style.backgroundColor = '#eee';
                        message = '';
                        break;
                    case 1:
                        strengthMeterFill.style.width = '20%';
                        strengthMeterFill.style.backgroundColor = '#ff3860';
                        message = 'Très faible';
                        break;
                    case 2:
                        strengthMeterFill.style.width = '40%';
                        strengthMeterFill.style.backgroundColor = '#ff9f43';
                        message = 'Faible';
                        break;
                    case 3:
                        strengthMeterFill.style.width = '60%';
                        strengthMeterFill.style.backgroundColor = '#ffc107';
                        message = 'Moyen';
                        break;
                    case 4:
                        strengthMeterFill.style.width = '80%';
                        strengthMeterFill.style.backgroundColor = '#2ecc71';
                        message = 'Fort';
                        break;
                    case 5:
                        strengthMeterFill.style.width = '100%';
                        strengthMeterFill.style.backgroundColor = '#00c853';
                        message = 'Très fort';
                        break;
                }
                
                strengthText.textContent = message;
            });
        }
    });
</script>
{% endblock %}

{% block body %}
<div class="reset-password-container">
    <div class="reset-password-card">
        <div class="reset-password-header">
            <div class="reset-password-icon">
                <i class="fas fa-key"></i>
            </div>
            <h1>Réinitialiser votre mot de passe</h1>
            <p>Veuillez saisir votre nouveau mot de passe</p>
        </div>
        <div class="reset-password-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <div class="alert alert-info mb-4">
                <i class="fas fa-mobile-alt me-2"></i>
                <strong>Information:</strong> Ce lien provient du SMS de réinitialisation envoyé à votre numéro de téléphone.
            </div>
            
            <form method="post">
                <div class="mb-3">
                    <label for="password" class="form-label">Nouveau mot de passe</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input type="password" id="password" name="password" class="form-control" placeholder="Entrez votre nouveau mot de passe" required>
                    </div>
                    <div class="password-strength-meter">
                        <div class="password-strength-meter-fill"></div>
                    </div>
                    <div class="password-strength-text text-muted"></div>
                </div>
                
                <div class="mb-4">
                    <label for="confirm_password" class="form-label">Confirmez le mot de passe</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </span>
                        <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Confirmez votre nouveau mot de passe" required>
                    </div>
                </div>
                
                <input type="hidden" name="token" value="{{ token }}">
                
                <button type="submit" class="btn btn-save">
                    <i class="fas fa-save me-2"></i>Réinitialiser le mot de passe
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %} 