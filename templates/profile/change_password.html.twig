{% extends 'front.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .profile-edit-container {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
        margin-bottom: 2rem;
        overflow: hidden;
    }
    
    .profile-header {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-blue));
        color: white;
        padding: 2rem;
        position: relative;
    }
    
    .profile-avatar {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        border: 4px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(138, 43, 226, 0.25);
    }
    
    .btn-save {
        background: linear-gradient(to right, var(--accent-green), #4CAF50);
        border: none;
        color: white;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 50px;
        transition: all 0.3s;
    }
    
    .btn-save:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .btn-cancel {
        background: linear-gradient(to right, #757575, #9E9E9E);
        border: none;
        color: white;
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 50px;
        transition: all 0.3s;
    }
    
    .btn-cancel:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .form-label {
        font-weight: 600;
        color: #555;
    }
    
    .profile-nav {
        display: flex;
        margin-bottom: 2rem;
        border-bottom: 1px solid #eee;
    }
    
    .profile-nav-item {
        padding: 1rem 1.5rem;
        font-weight: 600;
        color: #555;
        border-bottom: 3px solid transparent;
        transition: all 0.3s;
    }
    
    .profile-nav-item:hover, .profile-nav-item.active {
        color: var(--primary-color);
        border-bottom-color: var(--primary-color);
    }
    
    .password-requirements {
        background-color: #f9f9f9;
        border-radius: 10px;
        padding: 1.5rem;
        margin-bottom: 2rem;
    }
    
    .requirement-item {
        margin-bottom: 0.5rem;
        color: #666;
    }
    
    .requirement-item i {
        width: 20px;
        text-align: center;
        margin-right: 5px;
    }
</style>
{% endblock %}

{% block body %}
<div class="container">
    <div class="profile-edit-container">
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <img src="https://ui-avatars.com/api/?name={{ app.user.firstName }}+{{ app.user.lastName }}&background=8A2BE2&color=fff&size=120" 
                         alt="{{ app.user.firstName }}" class="profile-avatar">
                </div>
                <div class="col-md-10">
                    <h1 class="mb-1">{{ app.user.firstName }} {{ app.user.lastName }}</h1>
                    <p class="mb-0"><i class="fas fa-envelope me-2"></i>{{ app.user.email }}</p>
                    <div class="mt-3">
                        <span class="badge bg-light text-dark me-2">
                            <i class="fas fa-user me-1"></i>{{ app.user.role|replace({'ROLE_': ''}) }}
                        </span>
                        <span class="badge bg-light text-dark me-2">
                            <i class="fas fa-calendar-alt me-1"></i>Member since {{ app.user.createdAt|date('M Y') }}
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="container p-4">
            <div class="profile-nav">
                <a href="{{ path('app_profile_index') }}" class="profile-nav-item">
                    <i class="fas fa-user me-2"></i>Profile
                </a>
                <a href="{{ path('app_profile_edit') }}" class="profile-nav-item">
                    <i class="fas fa-edit me-2"></i>Edit Profile
                </a>
                <a href="{{ path('app_profile_change_password') }}" class="profile-nav-item active">
                    <i class="fas fa-key me-2"></i>Change Password
                </a>
            </div>
            
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <div id="password-confirmation" class="alert alert-success d-none">
                <i class="fas fa-check-circle me-2"></i>Your password has been changed successfully!
            </div>
            
            <h3 class="mb-4">Change Your Password</h3>
            
            <div class="row">
                <div class="col-md-8">
                    {{ form_start(form) }}
                    <div class="mb-3">
                        {{ form_label(form.currentPassword) }}
                        {{ form_widget(form.currentPassword) }}
                        <div class="form-error">
                            {{ form_errors(form.currentPassword) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.newPassword.first) }}
                        {{ form_widget(form.newPassword.first) }}
                        <div class="form-error">
                            {{ form_errors(form.newPassword.first) }}
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        {{ form_label(form.newPassword.second) }}
                        {{ form_widget(form.newPassword.second) }}
                        <div class="form-error">
                            {{ form_errors(form.newPassword.second) }}
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-end mt-4">
                        <a href="{{ path('app_profile_index') }}" class="btn btn-cancel me-2">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-save" id="save-password-btn" style="background: linear-gradient(to right, #ff7700, #ff9900); font-size: 16px; padding: 12px 30px;">
                            <i class="fas fa-key me-2"></i>Change Password
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
                
                <div class="col-md-4">
                    <div class="password-requirements">
                        <h5 class="mb-3"><i class="fas fa-shield-alt me-2"></i>Password Requirements</h5>
                        <p class="text-muted mb-3">Your password must meet the following requirements:</p>
                        <div class="requirement-item">
                            <i class="fas fa-check-circle text-success"></i> Minimum 6 characters
                        </div>
                        <div class="requirement-item">
                            <i class="fas fa-check-circle text-success"></i> Include at least one uppercase letter
                        </div>
                        <div class="requirement-item">
                            <i class="fas fa-check-circle text-success"></i> Include at least one number
                        </div>
                        <div class="requirement-item">
                            <i class="fas fa-check-circle text-success"></i> Include at least one special character
                        </div>
                        <hr>
                        <div class="alert alert-info mb-0">
                            <i class="fas fa-info-circle me-2"></i> Changing your password will log you out of all other devices.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('form');
        form.addEventListener('submit', function() {
            const saveButton = document.getElementById('save-password-btn');
            saveButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating...';
            saveButton.disabled = true;
        });
    });
</script>
{% endblock %} 