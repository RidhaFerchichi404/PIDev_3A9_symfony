{% extends 'front.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .forgot-password-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 2rem 0;
    }
    
    .forgot-password-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        overflow: hidden;
        animation: fadeIn 0.5s ease;
    }
    
    .forgot-password-header {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-blue));
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
    }
    
    .forgot-password-header h1 {
        margin-bottom: 0.5rem;
        font-size: 1.8rem;
    }
    
    .forgot-password-body {
        padding: 2rem;
    }
    
    .forgot-password-icon {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
    
    .forgot-password-icon i {
        font-size: 2.5rem;
        color: white;
    }
    
    .btn-reset {
        background: linear-gradient(to right, var(--accent-green), #4CAF50);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 50px;
        transition: all 0.3s;
        width: 100%;
    }
    
    .btn-reset:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .btn-back {
        color: #666;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 1rem;
        transition: all 0.3s;
    }
    
    .btn-back:hover {
        color: var(--primary-color);
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(138, 43, 226, 0.25);
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="forgot-password-container">
    <div class="forgot-password-card">
        <div class="forgot-password-header">
            <div class="forgot-password-icon">
                <i class="fas fa-mobile-alt"></i>
            </div>
            <h1>Mot de passe oublié?</h1>
            <p>Entrez votre adresse email pour recevoir un SMS de réinitialisation</p>
        </div>
        <div class="forgot-password-body">
            {% for message in app.flashes('info') %}
                <div class="alert alert-info alert-dismissible fade show" role="alert">
                    <i class="fas fa-info-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <form method="post">
                <div class="mb-4">
                    <label for="email" class="form-label">Adresse Email</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Entrez votre adresse email" required autocomplete="email">
                    </div>
                    <small class="form-text text-muted mt-2">
                        <i class="fas fa-info-circle me-1"></i>
                        Nous enverrons un SMS avec les instructions de réinitialisation au numéro de téléphone associé à votre compte.
                    </small>
                </div>

                <div class="security-notice alert alert-warning mb-4">
                    <i class="fas fa-shield-alt me-2"></i>
                    <strong>Information de sécurité:</strong> Pour votre sécurité, les liens de réinitialisation sont envoyés uniquement par SMS au numéro enregistré dans votre profil et expirent après 1 heure.
                </div>
                
                <button type="submit" class="btn btn-reset">
                    <i class="fas fa-paper-plane me-2"></i>Envoyer le SMS
                </button>
                
                <a href="{{ path('app_login') }}" class="btn-back">
                    <i class="fas fa-arrow-left me-1"></i>Retour à la connexion
                </a>
            </form>
        </div>
    </div>
</div>
{% endblock %} 