{% extends 'front.html.twig' %}

{% block title %}Vérification du code SMS{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .verify-code-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 80vh;
        padding: 2rem 0;
    }
    
    .verify-code-card {
        background-color: #fff;
        border-radius: 15px;
        box-shadow: 0 5px 25px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        overflow: hidden;
        animation: fadeIn 0.5s ease;
    }
    
    .verify-code-header {
        background: linear-gradient(135deg, var(--primary-color), var(--accent-blue));
        color: white;
        padding: 2rem;
        text-align: center;
        position: relative;
    }
    
    .verify-code-header h1 {
        margin-bottom: 0.5rem;
        font-size: 1.8rem;
    }
    
    .verify-code-body {
        padding: 2rem;
    }
    
    .verify-code-icon {
        width: 80px;
        height: 80px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
    
    .verify-code-icon i {
        font-size: 2.5rem;
        color: white;
    }
    
    .btn-verify {
        background: linear-gradient(to right, var(--accent-green), #4CAF50);
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 50px;
        transition: all 0.3s;
        width: 100%;
    }
    
    .btn-verify:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .btn-resend {
        background: linear-gradient(to right, var(--primary-color), var(--accent-blue));
        border: none;
        color: white;
        font-weight: 600;
        padding: 12px;
        border-radius: 50px;
        transition: all 0.3s;
        width: 100%;
        margin-top: 1rem;
    }
    
    .btn-resend:hover {
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }
    
    .btn-back {
        color: #666;
        text-decoration: none;
        display: block;
        text-align: center;
        margin-top: 1rem;
        transition: all 0.3s;
    }
    
    .btn-back:hover {
        color: var(--primary-color);
    }
    
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 0.25rem rgba(138, 43, 226, 0.25);
    }
    
    .code-inputs {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px;
    }
    
    .code-inputs input {
        width: 3rem;
        height: 3.5rem;
        text-align: center;
        font-size: 1.5rem;
        font-weight: bold;
        border: 2px solid #ddd;
        border-radius: 8px;
        margin: 0 5px;
        transition: all 0.3s;
    }
    
    .code-inputs input:focus {
        border-color: var(--primary-color);
        outline: none;
        box-shadow: 0 0 0 0.25rem rgba(138, 43, 226, 0.25);
    }
    
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto focus to first input
        document.getElementById('digit-1').focus();
        
        // Handle inputs
        const inputs = document.querySelectorAll('.code-digit');
        const verificationCodeInput = document.getElementById('verification_code');
        
        inputs.forEach((input, index) => {
            // Move to next input after entering a digit
            input.addEventListener('keyup', function(e) {
                if (this.value.length === this.maxLength) {
                    if (index < inputs.length - 1) {
                        inputs[index + 1].focus();
                    }
                }
                
                // Update hidden field with complete code
                updateVerificationCode();
            });
            
            // Handle backspace
            input.addEventListener('keydown', function(e) {
                if (e.key === 'Backspace' && this.value.length === 0 && index > 0) {
                    inputs[index - 1].focus();
                }
            });
        });
        
        // Function to update hidden input with complete code
        function updateVerificationCode() {
            let code = '';
            inputs.forEach(input => {
                code += input.value;
            });
            verificationCodeInput.value = code;
        }
    });
</script>
{% endblock %}

{% block body %}
<div class="verify-code-container">
    <div class="verify-code-card">
        <div class="verify-code-header">
            <div class="verify-code-icon">
                <i class="fas fa-mobile-alt"></i>
            </div>
            <h1>Vérification SMS</h1>
            <p>Veuillez saisir le code de vérification envoyé par SMS</p>
        </div>
        <div class="verify-code-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>{{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
            
            <div class="alert alert-info mb-4">
                <i class="fas fa-info-circle me-2"></i>
                <strong>Information:</strong> Un code de vérification à 6 chiffres a été envoyé au numéro de téléphone associé à l'adresse email <strong>{{ email }}</strong>.
                <br>Ce code est valable 15 minutes.
            </div>
            
            <form method="post">
                <div class="mb-4">
                    <label for="verification_code" class="form-label">Code de vérification</label>
                    
                    <div class="code-inputs">
                        <input type="text" maxlength="1" class="form-control code-digit" id="digit-1" pattern="[0-9]" inputmode="numeric">
                        <input type="text" maxlength="1" class="form-control code-digit" id="digit-2" pattern="[0-9]" inputmode="numeric">
                        <input type="text" maxlength="1" class="form-control code-digit" id="digit-3" pattern="[0-9]" inputmode="numeric">
                        <input type="text" maxlength="1" class="form-control code-digit" id="digit-4" pattern="[0-9]" inputmode="numeric">
                        <input type="text" maxlength="1" class="form-control code-digit" id="digit-5" pattern="[0-9]" inputmode="numeric">
                        <input type="text" maxlength="1" class="form-control code-digit" id="digit-6" pattern="[0-9]" inputmode="numeric">
                    </div>
                    
                    <input type="hidden" id="verification_code" name="verification_code">
                </div>
                
                <button type="submit" class="btn btn-verify">
                    <i class="fas fa-check-circle me-2"></i>Vérifier le code
                </button>
                
                <a href="{{ path('app_forgot_password') }}" class="btn-back">
                    <i class="fas fa-arrow-left me-1"></i>Retour
                </a>
            </form>
        </div>
    </div>
</div>
{% endblock %} 