{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block body %}
<div class="container-fluid">
    <!-- Page Header -->
    <div class="page-header">
        <h1>Tableau de bord Sportify</h1>
        <p class="text-muted">Gérez votre plateforme sportive</p>
    </div>

    <!-- Stats Cards -->
    <div class="row">
        <div class="col-md-3 col-sm-6">
            <div class="stats-card">
                <i class="fas fa-users"></i>
                <h3>12,628</h3>
                <p>Utilisateurs</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stats-card">
                <i class="fas fa-calendar-alt"></i>
                <h3>84</h3>
                <p>Événements</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stats-card">
                <i class="fas fa-dumbbell"></i>
                <h3>36</h3>
                <p>Programmes</p>
            </div>
        </div>
        <div class="col-md-3 col-sm-6">
            <div class="stats-card">
                <i class="fas fa-building"></i>
                <h3>27</h3>
                <p>Salles de sport</p>
            </div>
        </div>
    </div>

    <!-- Gym Facilities Section -->
    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Salles de sport</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        {% for i in 1..2 %}
                        <div class="col-md-6 mb-4">
                            <div class="card h-100">
                                <img src="{{ asset('img/gym-' ~ i ~ '.jpg') }}" class="card-img-top" alt="Gym Image" style="height: 200px; object-fit: cover;">
                                <div class="card-body">
                                    <h5 class="card-title">{% if i == 1 %}California Gym{% else %}Cactus{% endif %}</h5>
                                    <p class="card-text">
                                        <strong>Région:</strong> {% if i == 1 %}Ariana{% else %}Tunis{% endif %}<br>
                                        <strong>Ville:</strong> {% if i == 1 %}Ettadhamen{% else %}El Omrane Supérieur{% endif %}<br>
                                        <strong>Propriétaire:</strong> ID {{ i }}
                                    </p>
                                    <div class="d-flex justify-content-between mt-3">
                                        <a href="#" class="btn btn-primary btn-sm">Éditer</a>
                                        <a href="#" class="btn btn-accent btn-sm">Équipements</a>
                                        <a href="#" class="btn btn-info btn-sm">PDF</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Statistics Charts -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Statistiques</h5>
                </div>
                <div class="card-body">
                    <canvas id="userStatsChart" height="250"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5>Activité récente</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Nouvel utilisateur inscrit
                            <span class="badge bg-primary rounded-pill">Il y a 5 min</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Nouvel événement créé
                            <span class="badge bg-primary rounded-pill">Il y a 1 heure</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Mise à jour du profil administrateur
                            <span class="badge bg-primary rounded-pill">Il y a 3 heures</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User Stats Chart
            var ctx = document.getElementById('userStatsChart').getContext('2d');
            var userStatsChart = new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: ['Utilisateurs actifs', 'Utilisateurs inactifs', 'Administrateurs'],
                    datasets: [{
                        data: [70, 20, 10],
                        backgroundColor: [
                            'rgba(56, 201, 118, 0.8)',
                            'rgba(255, 90, 90, 0.8)',
                            'rgba(60, 207, 207, 0.8)'
                        ],
                        borderColor: [
                            'rgba(56, 201, 118, 1)',
                            'rgba(255, 90, 90, 1)',
                            'rgba(60, 207, 207, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'bottom',
                        }
                    }
                }
            });
        });
    </script>
{% endblock %} 