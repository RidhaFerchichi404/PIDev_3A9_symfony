<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}{% endblock %} | {% block section %}{% endblock %} sportify</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
            <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
            {{ importmap('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        {% endblock %}
    </head>
    <body>
        {% set is_front = app.request.pathInfo starts with '/blog' %}
        {% set is_admin = app.request.pathInfo starts with '/admin' %}
        
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top {% if is_admin %}navbar-back{% else %}navbar-front{% endif %}">
            <div class="container">
                <a class="navbar-brand" href="{% if is_admin %}{{ path('app_admin_dashboard') }}{% else %}{{ path('app_front_post_index') }}{% endif %}">
                    sportify
                    {% if is_admin %}
                        <span class="area">ADMIN</span>
                    {% else %}
                        <span class="area">FRONT</span>
                    {% endif %}
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link {% if is_front %}active{% endif %}" href="{{ path('app_front_post_index') }}">sportify</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        {% if is_admin %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_front_post_index') }}">
                                    <i class="fas fa-globe"></i> View Public Site
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Tools
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" href="{{ path('app_admin_dashboard') }}">Dashboard</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_admin_post_index') }}">Manage Posts</a></li>
                                    <li><a class="dropdown-item" href="{{ path('app_admin_comment_index') }}">Manage Comments</a></li>
                                </ul>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>

        <main>
            {% block body %}{% endblock %}
        </main>
        
        <footer class="mt-5 py-3 bg-light">
            <div class="container text-center">
                <p class="text-muted mb-0">Blog Platform &copy; {{ "now"|date("Y") }}</p>
            </div>
        </footer>
    </body>
</html>
