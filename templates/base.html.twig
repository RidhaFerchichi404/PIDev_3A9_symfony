<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %} - Sportify</title>
        
        <!-- Bootstrap CSS -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
        <!-- Google Fonts -->
        <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
        
        <!-- Custom CSS -->
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        
        <style>
            :root {
                --primary-color: #6B48FF; /* Deep purple */
                --primary-light: #9D8DFF; /* Light purple */
                --primary-dark: #4A2DBE; /* Dark purple */
                --accent-color: #3CCFCF; /* Teal */
                --accent-hover: #2AA7A7; /* Darker teal */
                --success-color: #38C976; /* Vibrant green */
                --info-color: #2B98F0; /* Vibrant blue */
                --warning-color: #F7AB3A; /* Vibrant yellow */
                --danger-color: #FF5A5A; /* Vibrant red */
                --white: #FFFFFF;
                --light-gray: #F8F9FA;
                --medium-gray: #E9ECEF;
                --dark-gray: #495057;
                --purple-gradient: linear-gradient(135deg, #6B48FF, #4A2DBE);
                --teal-gradient: linear-gradient(135deg, #3CCFCF, #2AA7A7);
                --purple-to-teal-gradient: linear-gradient(135deg, #6B48FF, #3CCFCF);
            }
            
            body {
                font-family: 'Poppins', sans-serif;
                background-color: #F3F5FB; /* Light blue-gray background */
                color: var(--dark-gray);
                min-height: 100vh;
                display: flex;
            }
            
            .sidebar {
                width: 280px;
                background: var(--purple-gradient);
                box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
                position: fixed;
                height: 100vh;
                overflow-y: auto;
                z-index: 1000;
                transition: all 0.3s;
                border-right: none;
            }
            
            .sidebar .logo {
                padding: 25px;
                display: flex;
                align-items: center;
                border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            }
            
            .sidebar .logo img, .sidebar .logo svg {
                height: 45px;
                margin-right: 15px;
                filter: drop-shadow(0px 2px 5px rgba(0, 0, 0, 0.2));
            }
            
            .sidebar .logo span {
                font-size: 24px;
                font-weight: 700;
                color: white;
                text-shadow: 0px 2px 4px rgba(0, 0, 0, 0.2);
            }
            
            .sidebar .nav-item {
                padding: 0;
                margin: 5px 15px;
            }
            
            .sidebar .nav-link {
                padding: 14px 20px;
                color: rgba(255, 255, 255, 0.9);
                font-weight: 500;
                display: flex;
                align-items: center;
                transition: all 0.3s;
                border-radius: 10px;
                margin: 5px 0;
            }
            
            .sidebar .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.15);
                color: white;
                transform: translateX(5px);
            }
            
            .sidebar .nav-link.active {
                background-color: rgba(255, 255, 255, 0.2);
                color: white;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            }
            
            .sidebar .nav-link i {
                margin-right: 12px;
                width: 22px;
                text-align: center;
                font-size: 18px;
            }
            
            /* Submenu styles */
            .sidebar ul ul {
                padding-left: 0;
            }
            
            .sidebar ul ul .nav-link {
                padding: 10px 10px 10px 35px;
                font-size: 0.9rem;
            }
            
            .sidebar ul ul .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
            }
            
            .sidebar ul ul .nav-link.active {
                background-color: rgba(255, 255, 255, 0.15);
            }
            
            /* Dropdown icon */
            .fa-chevron-down {
                transition: transform 0.3s ease;
            }
            
            .fa-rotate-180 {
                transform: rotate(180deg);
            }
            
            .main-content {
                flex: 1;
                margin-left: 280px;
                padding: 30px;
                transition: all 0.3s;
            }
            
            .page-header {
                margin-bottom: 30px;
                background: var(--white);
                padding: 25px;
                border-radius: 15px;
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.03);
                border-left: 5px solid var(--accent-color);
            }
            
            .page-header h1 {
                font-weight: 700;
                color: var(--primary-dark);
                margin-bottom: 5px;
                font-size: 28px;
            }
            
            .card {
                border: none;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                border-radius: 15px;
                margin-bottom: 25px;
                transition: all 0.3s;
                overflow: hidden;
                border-top: 5px solid var(--accent-color);
            }
            
            .card:hover {
                transform: translateY(-7px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            }
            
            .card-header {
                background-color: var(--white);
                border-bottom: 1px solid var(--medium-gray);
                padding: 20px 25px;
                font-weight: 600;
                font-size: 18px;
                color: var(--primary-dark);
            }
            
            .card-body {
                padding: 25px;
                background-color: var(--white);
            }
            
            .btn {
                border-radius: 10px;
                padding: 10px 20px;
                font-weight: 600;
                font-size: 14px;
                text-transform: uppercase;
                letter-spacing: 0.5px;
                transition: all 0.3s;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                border: none;
            }
            
            .btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
            }
            
            .btn-primary {
                background: var(--primary-color);
                color: white;
            }
            
            .btn-primary:hover {
                background: var(--primary-dark);
            }
            
            .btn-success {
                background: var(--success-color);
                color: white;
            }
            
            .btn-success:hover {
                background: #2BA866;
            }
            
            .btn-info {
                background: var(--info-color);
                color: white;
            }
            
            .btn-info:hover {
                background: #2281D1;
            }
            
            .btn-warning {
                background: var(--warning-color);
                color: white;
            }
            
            .btn-warning:hover {
                background: #E09422;
            }
            
            .btn-danger {
                background: var(--danger-color);
                color: white;
            }
            
            .btn-danger:hover {
                background: #E84545;
            }
            
            .btn-accent {
                background: var(--accent-color);
                color: white;
            }
            
            .btn-accent:hover {
                background: var(--accent-hover);
            }
            
            .navbar {
                background-color: var(--white);
                box-shadow: 0 5px 20px rgba(0, 0, 0, 0.03);
                padding: 15px 25px;
                margin-bottom: 30px;
                border-radius: 15px;
                border-left: 5px solid var(--primary-color);
            }
            
            .table {
                border-collapse: separate;
                border-spacing: 0;
                width: 100%;
                border-radius: 15px;
                overflow: hidden;
            }
            
            .table thead th {
                background-color: rgba(107, 72, 255, 0.05);
                border-bottom: 2px solid var(--medium-gray);
                padding: 15px 20px;
                font-weight: 600;
                color: var(--primary-dark);
            }
            
            .table tbody td {
                padding: 15px 20px;
                border-bottom: 1px solid var(--medium-gray);
                vertical-align: middle;
            }
            
            .table tbody tr:last-child td {
                border-bottom: none;
            }
            
            .table tbody tr:hover {
                background-color: rgba(107, 72, 255, 0.03);
            }
            
            .badge {
                padding: 8px 15px;
                border-radius: 50px;
                font-weight: 600;
                font-size: 12px;
                letter-spacing: 0.5px;
                text-transform: uppercase;
            }
            
            .badge-success {
                background-color: rgba(56, 201, 118, 0.15);
                color: var(--success-color);
            }
            
            .badge-danger {
                background-color: rgba(255, 90, 90, 0.15);
                color: var(--danger-color);
            }
            
            .badge-warning {
                background-color: rgba(247, 171, 58, 0.15);
                color: var(--warning-color);
            }
            
            .badge-info {
                background-color: rgba(43, 152, 240, 0.15);
                color: var(--info-color);
            }
            
            .pagination {
                margin: 0;
            }
            
            .pagination .page-link {
                border-radius: 10px;
                margin: 0 5px;
                color: var(--primary-color);
                border: 1px solid var(--medium-gray);
                padding: 8px 16px;
                font-weight: 600;
            }
            
            .pagination .page-item.active .page-link {
                background-color: var(--primary-color);
                border-color: var(--primary-color);
                box-shadow: 0 4px 10px rgba(107, 72, 255, 0.3);
            }
            
            .form-control {
                border-radius: 10px;
                padding: 12px 20px;
                border: 2px solid var(--medium-gray);
                transition: all 0.3s;
                font-size: 14px;
            }
            
            .form-control:focus {
                border-color: var(--accent-color);
                box-shadow: 0 0 0 0.25rem rgba(60, 207, 207, 0.25);
            }
            
            .form-label {
                font-weight: 600;
                color: var(--primary-dark);
                margin-bottom: 10px;
            }
            
            .input-group {
                border-radius: 10px;
                overflow: hidden;
            }
            
            .input-group-text {
                background-color: var(--accent-color);
                color: white;
                border: none;
                padding: 0 20px;
            }
            
            /* Header user profile */
            .user-profile {
                display: flex;
                align-items: center;
                background: rgba(107, 72, 255, 0.05);
                padding: 10px 20px;
                border-radius: 50px;
                transition: all 0.3s;
            }
            
            .user-profile:hover {
                background: rgba(107, 72, 255, 0.1);
            }
            
            .user-profile img {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                margin-right: 15px;
                border: 3px solid rgba(107, 72, 255, 0.3);
            }
            
            .user-profile .fw-bold {
                color: var(--primary-dark);
            }
            
            /* Logout button */
            .user-profile .btn-danger {
                border-radius: 50px;
                padding: 8px 15px;
                box-shadow: 0 4px 8px rgba(255, 90, 90, 0.2);
                transition: all 0.3s;
            }
            
            .user-profile .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(255, 90, 90, 0.3);
            }
            
            /* Stats cards */
            .stats-card {
                border-radius: 15px;
                padding: 25px;
                margin-bottom: 25px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                background-color: var(--white);
                transition: all 0.3s;
                border-top: 5px solid var(--accent-color);
                position: relative;
                overflow: hidden;
            }
            
            .stats-card:hover {
                transform: translateY(-7px);
                box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            }
            
            .stats-card::after {
                content: '';
                position: absolute;
                top: 0;
                right: 0;
                height: 100%;
                width: 5px;
                background: var(--accent-color);
            }
            
            .stats-card i {
                font-size: 35px;
                margin-bottom: 20px;
                display: inline-block;
                color: var(--accent-color);
                background: rgba(60, 207, 207, 0.1);
                padding: 20px;
                border-radius: 15px;
            }
            
            .stats-card h3 {
                font-size: 28px;
                font-weight: 700;
                margin-bottom: 5px;
                color: var(--primary-dark);
            }
            
            .stats-card p {
                color: var(--dark-gray);
                margin-bottom: 0;
                font-size: 16px;
                font-weight: 500;
            }
            
            /* Chart containers */
            .chart-container {
                position: relative;
                height: 300px;
                margin-bottom: 25px;
                background: var(--white);
                padding: 25px;
                border-radius: 15px;
                box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
                border-left: 5px solid var(--accent-color);
            }
            
            /* Custom switch */
            .form-check-input {
                width: 3em;
                height: 1.5em;
                cursor: pointer;
            }
            
            .form-check-input:checked {
                background-color: var(--accent-color);
                border-color: var(--accent-color);
            }
            
            /* Media Queries */
            @media (max-width: 992px) {
                .sidebar {
                    width: 80px;
                }
                
                .sidebar .logo span, .sidebar .nav-link span {
                    display: none;
                }
                
                .sidebar .nav-link i {
                    margin-right: 0;
                    font-size: 22px;
                }
                
                .main-content {
                    margin-left: 80px;
                }
            }
            
            @media (max-width: 768px) {
                .sidebar {
                    width: 0;
                    transform: translateX(-100%);
                }
                
                .sidebar.show {
                    width: 250px;
                    transform: translateX(0);
                }
                
                .main-content {
                    margin-left: 0;
                }
                
                .page-header h1 {
                    font-size: 24px;
                }
            }
        </style>
        
        {% block stylesheets %}{% endblock %}
        
        <!-- Custom JavaScript -->
        <script src="{{ asset('js/custom.js') }}"></script>
    </head>
    <body>
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <img src="{{ asset('images/logo.png') }}" alt="Sportify Logo">
                <span>Sportify</span>
            </div>
            <ul class="nav flex-column">
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_user' ? 'active' }}" href="{{ path('app_user_index') }}">
                        <i class="fas fa-users me-2"></i> Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_admin_dashboard' or app.request.get('_route') starts with 'app_admin_post' or app.request.get('_route') starts with 'app_admin_comment' ? 'active' }}" href="{{ path('app_admin_dashboard') }}">
                        <i class="fas fa-blog me-2"></i> Blog
                        <i class="fas fa-chevron-down float-end mt-1" style="font-size: 12px;"></i>
                    </a>
                    <ul class="nav flex-column ms-4" style="{{ app.request.get('_route') starts with 'app_admin_dashboard' or app.request.get('_route') starts with 'app_admin_post' or app.request.get('_route') starts with 'app_admin_comment' ? '' : 'display: none;' }}">
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') starts with 'app_admin_post' ? 'active' }}" href="{{ path('app_admin_post_index') }}">
                                <i class="fas fa-file-alt me-2"></i> Posts
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get('_route') starts with 'app_admin_comment' ? 'active' }}" href="{{ path('app_admin_comment_index') }}">
                                <i class="fas fa-comments me-2"></i> Comments
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ app.request.get('_route') starts with 'app_salle_de_sport' ? 'active' }}" href="{{ path('app_salle_de_sport_index') }}">
                        <i class="fas fa-dumbbell me-2"></i> Gyms
                    </a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_USER') %}
                <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_shop_produit' ? 'active' }}" href="{{ path('app_produit_index') }}">
                            <i class="fas fa-shopping-bag me-2"></i> Shop
                    </a>
                </li>
                <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_commande' ? 'active' }}" href="{{ path('app_commande_index') }}">
                            <i class="fas fa-shopping-cart me-2"></i> My Orders
                    </a>
                </li>
                {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_admin_produit' ? 'active' }}" href="{{ path('app_admin_produit_index') }}">
                            <i class="fas fa-box me-2"></i> Manage Products
                    </a>
                </li>
                <li class="nav-item">
                        <a class="nav-link {{ app.request.get('_route') starts with 'app_admin_commande' ? 'active' }}" href="{{ path('app_admin_commande_index') }}">
                            <i class="fas fa-shopping-cart me-2"></i> Manage Orders
                        </a>
                </li>
                <li class="nav-item mt-5">
                    <form action="{{ path('app_logout') }}" method="post" id="logout-form">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <a class="nav-link" href="#" onclick="document.getElementById('logout-form').submit(); return false;">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </form>
                </li>
                {% endif %}
            </ul>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Top Navigation Bar -->
            <nav class="navbar">
                <div class="container-fluid">
                    <div class="d-flex align-items-center">
                        <button class="btn btn-accent btn-sm me-3 rounded-circle d-lg-none" id="menu-toggle" style="width: 40px; height: 40px;">
                            <i class="fas fa-bars"></i>
                        </button>
                        <form class="d-flex">
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-search"></i>
                                </span>
                                <input type="text" class="form-control" placeholder="Search...">
                                <button class="btn btn-primary" type="submit">Search</button>
                            </div>
                        </form>
                    </div>
                    <div class="user-profile">
                        <img src="https://ui-avatars.com/api/?name={{ app.user.firstName }}+{{ app.user.lastName }}&background=6B48FF&color=fff" class="rounded-circle" alt="User Avatar">
                        <div class="d-none d-md-block">
                            <div class="fw-bold">{{ app.user.firstName }} {{ app.user.lastName }}</div>
                            <div class="small text-muted">{{ app.user.email }}</div>
                        </div>
                        <div class="ms-3">
                            <a href="{{ path('app_logout') }}" class="btn btn-danger btn-sm" title="Logout">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </nav>

            <!-- Page Content -->
            {% block body %}{% endblock %}
        </div>

        <!-- Bootstrap JS Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
        <!-- Charts.js -->
        <script src="https://cdn.jsdelivr.net/npm/chart.js@3.9.1/dist/chart.min.js"></script>
        <!-- Custom Scripts -->
        <script>
            // Toggle sidebar on mobile
            document.getElementById('menu-toggle').addEventListener('click', function() {
                document.querySelector('.sidebar').classList.toggle('show');
            });
            
            // Toggle Blog submenu
            document.addEventListener('DOMContentLoaded', function() {
                const blogLink = document.querySelector('.nav-link[href="{{ path('app_admin_dashboard') }}"]');
                const blogSubmenu = blogLink.nextElementSibling;
                const dropdownIcon = blogLink.querySelector('.fa-chevron-down');
                
                // Add click event to the dropdown icon to toggle submenu
                dropdownIcon.addEventListener('click', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    blogSubmenu.style.display = blogSubmenu.style.display === 'none' ? 'block' : 'none';
                    this.classList.toggle('fa-rotate-180');
                });
                
                // Show submenu if any of its items are active
                if (
                    (window.location.pathname.includes('admin/post') ||
                    window.location.pathname.includes('admin/comment') ||
                    window.location.pathname.includes('admin/dashboard'))
                ) {
                    blogSubmenu.style.display = 'block';
                    dropdownIcon.classList.add('fa-rotate-180');
                }
            });
        </script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
