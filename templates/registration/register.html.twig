{% extends 'front.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    :root {
        --dark-color: #0a0a0a;
        --dark-secondary: #151515;
        --accent-color: #ff7700;
        --accent-secondary: #ffcc00;
        --accent-hover: #ff9133;
        --text-color: #f2f2f2;
        --text-muted: #a0a0a0;
        --error-color: #ff3b30;
        --input-bg: #1a1a1a;
        --input-border: #333;
    }
    
    body {
        background-color: #0a0a0a;
        color: var(--text-color);
    }
    
    .register-container {
        padding: 3rem 0;
        min-height: 88vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .register-form-container {
        background-color: var(--dark-color);
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        transform: translateY(0);
        transition: all 0.3s ease;
        border: 1px solid #222;
    }
    
    .register-form-container:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.6), 0 0 20px rgba(255, 119, 0, 0.15);
        border-color: #333;
    }
    
    .register-form-header {
        padding: 25px;
        background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-secondary) 100%);
        border-bottom: 1px solid #222;
        text-align: center;
    }
    
    .register-form-header h1 {
        color: #fff;
        margin: 0;
        font-size: 1.75rem;
        font-weight: 700;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }
    
    .register-form-body {
        padding: 35px 30px;
    }
    
    .section-title {
        background: linear-gradient(90deg, var(--accent-secondary) 0%, var(--accent-color) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2rem;
        font-weight: 700;
        margin-bottom: 25px;
        padding-bottom: 12px;
        border-bottom: 1px solid #222;
        display: flex;
        align-items: center;
    }
    
    .section-title i {
        background: linear-gradient(90deg, var(--accent-secondary) 0%, var(--accent-color) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-right: 10px;
        font-size: 1.3rem;
    }
    
    .form-label {
        color: var(--text-color);
        font-weight: 600;
        margin-bottom: 10px;
        font-size: 0.95rem;
        display: flex;
        align-items: center;
    }
    
    .form-label i {
        margin-right: 8px;
        color: var(--accent-secondary);
    }
    
    .form-control {
        background-color: var(--input-bg);
        border: 2px solid var(--input-border);
        color: var(--text-color);
        padding: 14px 16px;
        height: auto;
        border-radius: 10px;
        box-shadow: none !important;
        transition: all 0.3s ease;
        font-size: 1rem;
    }
    
    .form-control:focus {
        background-color: #1c1c1c;
        border-color: var(--accent-secondary);
        color: var(--text-color);
        box-shadow: 0 0 0 3px rgba(255, 204, 0, 0.15) !important;
    }
    
    .form-control::placeholder {
        color: var(--text-muted);
        opacity: 0.7;
    }
    
    .form-check-input {
        background-color: var(--input-bg);
        border-color: var(--input-border);
        width: 18px;
        height: 18px;
    }
    
    .form-check-input:checked {
        background-color: var(--accent-secondary);
        border-color: var(--accent-secondary);
    }
    
    .form-check-label {
        color: var(--text-muted);
        font-size: 0.95rem;
        padding-left: 5px;
    }
    
    .btn-primary {
        background: linear-gradient(135deg, var(--accent-secondary) 0%, var(--accent-color) 100%);
        border: none;
        color: #fff;
        padding: 14px 15px;
        font-weight: 600;
        border-radius: 10px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(255, 119, 0, 0.3);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, var(--accent-secondary) 20%, var(--accent-color) 100%);
        color: #fff;
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(255, 119, 0, 0.4);
    }
    
    .btn-primary:active {
        transform: translateY(0);
    }
    
    .alert-danger {
        background-color: rgba(255, 59, 48, 0.1);
        border-color: rgba(255, 59, 48, 0.2);
        color: var(--error-color);
        border-radius: 10px;
        padding: 15px;
    }
    
    .alert-danger i {
        font-size: 1.1rem;
    }
    
    .text-primary, a {
        color: var(--accent-secondary) !important;
        transition: all 0.3s ease;
    }
    
    a:hover {
        color: var(--accent-color) !important;
        text-decoration: none;
    }
    
    .register-footer {
        text-align: center;
        color: var(--text-muted);
        margin-top: 30px;
        font-size: 0.95rem;
        padding-top: 20px;
        border-top: 1px solid #222;
    }
    
    .register-footer a {
        font-weight: 600;
    }
    
    .invalid-feedback {
        color: var(--error-color);
        font-size: 0.85rem;
        margin-top: 8px;
        display: flex;
        align-items: center;
    }
    
    .invalid-feedback:before {
        content: "⚠️";
        margin-right: 6px;
    }
    
    /* Enhanced responsive styles */
    @media (max-width: 767px) {
        .register-form-container {
            border-radius: 12px;
        }
        
        .register-form-body {
            padding: 25px 20px;
        }
        
        .btn-primary {
            padding: 12px;
        }
    }
</style>
{% endblock %}

{% block body %}
<div class="register-container">
    <div class="register-form-container">
        <div class="register-form-header">
            <h1><i class="fas fa-user-plus me-2"></i>Create Your Account</h1>
        </div>
        <div class="register-form-body">
            {{ form_start(registrationForm) }}
                {% for flashError in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger mb-4">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        {{ flashError }}
                    </div>
                {% endfor %}

                <div class="section-title">
                    <i class="fas fa-user"></i>Personal Information
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(registrationForm.first_name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.first_name) }}
                        {{ form_errors(registrationForm.first_name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(registrationForm.last_name, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.last_name) }}
                        {{ form_errors(registrationForm.last_name) }}
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(registrationForm.phone_number, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.phone_number) }}
                        {{ form_errors(registrationForm.phone_number) }}
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-4 mb-3 mb-md-0">
                        {{ form_label(registrationForm.age, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.age) }}
                        {{ form_errors(registrationForm.age) }}
                    </div>
                    <div class="col-md-8">
                        {{ form_label(registrationForm.cin, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.cin) }}
                        {{ form_errors(registrationForm.cin) }}
                    </div>
                </div>

                <div class="mb-4">
                    {{ form_label(registrationForm.location, null, {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(registrationForm.location) }}
                    {{ form_errors(registrationForm.location) }}
                </div>

                <div class="section-title mt-5">
                    <i class="fas fa-lock"></i>Security Information
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 mb-3 mb-md-0">
                        {{ form_label(registrationForm.plainPassword.first, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword.first) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(registrationForm.plainPassword.second, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword.second) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                </div>

                <div class="mb-4 form-check">
                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                    {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div class="mb-4">
                    <div class="g-recaptcha" data-sitekey="6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI"></div>
                </div>

                <button type="submit" class="btn btn-primary w-100 py-3">
                    <i class="fas fa-user-plus me-2"></i>Create Account
                </button>
            {{ form_end(registrationForm) }}
            
            <div class="register-footer">
                <p>Already have an account? <a href="{{ path('app_login') }}">Sign in</a></p>
            </div>
        </div>
    </div>
</div>
{% endblock %} 