{% extends 'base.html.twig' %}

{% block title %}Test d'envoi de SMS{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .sms-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
            background: #fff;
        }
        
        .section {
            margin-bottom: 30px;
            padding: 15px;
            border-radius: 8px;
            background-color: #f9f9f9;
        }
        
        h2 {
            color: #FF7700;
            margin-bottom: 20px;
        }
        
        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }
        
        input[type="text"], 
        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }
        
        textarea {
            min-height: 100px;
        }
        
        button {
            background-color: #FF7700;
            color: white;
            border: none;
            padding: 10px 15px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        
        button:hover {
            background-color: #E56600;
        }
        
        .result {
            margin-top: 15px;
            padding: 10px;
            border-radius: 4px;
            display: none;
        }
        
        .success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        
        .error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="sms-container">
        <h1>Tests d'envoi de SMS</h1>
        
        <div class="section">
            <h2>SMS simple</h2>
            <form id="simpleSmsForm">
                <div>
                    <label for="phoneNumber">Numéro de téléphone:</label>
                    <input type="text" id="phoneNumber" required placeholder="+21692524011">
                </div>
                <div>
                    <label for="message">Message:</label>
                    <textarea id="message" placeholder="Votre message ici...">Test message from Sportify</textarea>
                </div>
                <button type="submit">Envoyer SMS</button>
                <div id="smsResult" class="result"></div>
            </form>
        </div>
        
        <div class="section">
            <h2>Envoi de code temporaire</h2>
            <form id="passwordSmsForm">
                <div>
                    <label for="phoneNumberPassword">Numéro de téléphone:</label>
                    <input type="text" id="phoneNumberPassword" required placeholder="+21692524011">
                </div>
                <button type="submit">Envoyer code</button>
                <div id="passwordResult" class="result"></div>
            </form>
        </div>
        
        <div class="section">
            <h2>Lien de réinitialisation</h2>
            <form id="resetSmsForm">
                <div>
                    <label for="phoneNumberReset">Numéro de téléphone:</label>
                    <input type="text" id="phoneNumberReset" required placeholder="+21692524011">
                </div>
                <button type="submit">Envoyer lien</button>
                <div id="resetResult" class="result"></div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // SMS simple
            document.getElementById('simpleSmsForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const phoneNumber = document.getElementById('phoneNumber').value;
                const message = document.getElementById('message').value;
                const resultDiv = document.getElementById('smsResult');
                
                resultDiv.textContent = 'Envoi en cours...';
                resultDiv.className = 'result';
                resultDiv.style.display = 'block';
                
                fetch('/sms/send', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ 
                        phone_number: phoneNumber,
                        message: message
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        resultDiv.textContent = data.message;
                        resultDiv.className = data.success ? 'result success' : 'result error';
                    })
                    .catch(error => {
                        resultDiv.textContent = 'Erreur: ' + error.message;
                        resultDiv.className = 'result error';
                    });
            });
            
            // Code temporaire
            document.getElementById('passwordSmsForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const phoneNumber = document.getElementById('phoneNumberPassword').value;
                const resultDiv = document.getElementById('passwordResult');
                
                resultDiv.textContent = 'Envoi en cours...';
                resultDiv.className = 'result';
                resultDiv.style.display = 'block';
                
                fetch('/sms/password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ phone_number: phoneNumber })
                })
                    .then(response => response.json())
                    .then(data => {
                        resultDiv.textContent = data.message + (data.success ? ' (Code: ' + data.password + ')' : '');
                        resultDiv.className = data.success ? 'result success' : 'result error';
                    })
                    .catch(error => {
                        resultDiv.textContent = 'Erreur: ' + error.message;
                        resultDiv.className = 'result error';
                    });
            });
            
            // Lien de réinitialisation
            document.getElementById('resetSmsForm').addEventListener('submit', function(e) {
                e.preventDefault();
                const phoneNumber = document.getElementById('phoneNumberReset').value;
                const resultDiv = document.getElementById('resetResult');
                
                resultDiv.textContent = 'Envoi en cours...';
                resultDiv.className = 'result';
                resultDiv.style.display = 'block';
                
                fetch('/sms/reset', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ phone_number: phoneNumber })
                })
                    .then(response => response.json())
                    .then(data => {
                        resultDiv.textContent = data.message + (data.success ? ' (URL: ' + data.url + ')' : '');
                        resultDiv.className = data.success ? 'result success' : 'result error';
                    })
                    .catch(error => {
                        resultDiv.textContent = 'Erreur: ' + error.message;
                        resultDiv.className = 'result error';
                    });
            });
        });
    </script>
{% endblock %} 