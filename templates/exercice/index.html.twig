{% extends 'base.html.twig' %}

{% block title %}Exercise Index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-lila">Exercise Index</h1>

        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-header bg-lila text-white">
                <h5 class="card-title mb-0">Exercise List</h5>
            </div>

            <div class="card-body">
                <!-- Exercise Table -->
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Owner ID</th>
                            <th>Exercise Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for exercice in exercices %}
                            <tr>
                                <td>{{ exercice.id }}</td>
                                <td>{{ exercice.description }}</td>
                                <td>
                                    <img src="{{ asset('images/' ~ exercice.image) }}" alt="{{ exercice.nomExercice }}" class="img-thumbnail" style="width: 100px;">
                                </td>
                                <td>{{ exercice.idUser }}</td>
                                <td>{{ exercice.nomExercice }}</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a href="{{ path('app_exercice_show', {'id': exercice.id}) }}" class="btn btn-info btn-sm">
                                            <i class="ri-eye-line"></i> Show
                                        </a>
                                        <a href="{{ path('app_exercice_edit', {'id': exercice.id}) }}" class="btn btn-warning btn-sm">
                                            <i class="ri-pencil-line"></i> Edit
                                        </a>
                                        <!-- Delete Button with red color -->
                                        <a href="{{ path('app_exercice_delete', {'id': exercice.id}) }}" class="btn btn-danger btn-sm">
                                            <i class="ri-delete-bin-6-line"></i> Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_exercice_new') }}" class="btn btn-success btn-lg">
                    <i class="ri-add-line"></i> Create New Exercise
                </a>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .container {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
        }

        .card {
            background-color: white;
            border-radius: 12px;
        }

        .card-header {
            background-color: #9333ea; /* Lilac */
            color: white;
            border-radius: 12px 12px 0 0;
        }

        .table {
            width: 100%;
            margin-top: 20px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .table-bordered th, .table-bordered td {
            border: 1px solid #ddd;
        }

        .img-thumbnail {
            border-radius: 8px;
            max-width: 100%;
            height: auto;
        }

        .btn {
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-warning {
            background-color: #ffc107;
            border-color: #ffc107;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-info:hover {
            background-color: #138496;
            border-color: #138496;
        }

        .btn-warning:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #c82333;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
            border-radius: 5px;
        }

        .btn-success:hover {
            background-color: #218838;
        }

        .btn-group .btn {
            margin-right: 5px;
        }
    </style>
{% endblock %}
