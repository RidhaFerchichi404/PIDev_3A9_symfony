{% extends 'base.html.twig' %}

{% block title %}Exercise List{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-lila">Exercise List</h1>

        <!-- Add Exercise Button -->
        <div class="mb-4 text-end">
            <a href="{{ path('app_exercice_new') }}" class="btn btn-success btn-lg">
                <i class="ri-add-line"></i> Add Exercise
            </a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for exercice in exercices %}
                    <tr>
                        <td>{{ exercice.id }}</td>
                        <td>{{ exercice.nomexercice }}</td>
                        <td>{{ exercice.description|length > 50 ? exercice.description|slice(0, 50) ~ '...' : exercice.description }}</td>
                        <td>
                            {% if exercice.image %}
                                <img src="{{ asset('images/' ~ exercice.image) }}" alt="{{ exercice.nomexercice }}" class="img-thumbnail" style="height: 100px; width: auto;">
                            {% else %}
                                <span class="text-muted">No image</span>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_exercice_show', {'id': exercice.id}) }}" class="btn btn-info btn-sm">View</a>
                            <a href="{{ path('app_exercice_edit', {'id': exercice.id}) }}" class="btn btn-warning btn-sm owner-action" data-owner="{{ exercice.idUser }}" data-current-user="{{ app.user ? app.user.id : 0 }}">Edit</a>
                            <form method="post" action="{{ path('app_exercice_delete', {'id': exercice.id}) }}" onsubmit="return confirmDelete(this, {{ exercice.idUser }});" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exercice.id) }}">
                                <button type="submit" class="btn btn-danger btn-sm owner-action" data-owner="{{ exercice.idUser }}" data-current-user="{{ app.user ? app.user.id : 0 }}">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No exercises found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
<script>
    // Vérification propriétaire pour les boutons de modification et suppression
    document.addEventListener('DOMContentLoaded', function() {
        document.querySelectorAll('.owner-action').forEach(button => {
            button.addEventListener('click', function(event) {
                const owner = parseInt(this.dataset.owner);
                const currentUser = parseInt(this.dataset.currentUser);
                
                if (currentUser !== owner) {
                    event.preventDefault();
                    alert("Vous ne pouvez pas modifier ou supprimer un exercice dont vous n'êtes pas le propriétaire.");
                }
            });
        });
    });
    
    // Fonction pour confirmer la suppression
    function confirmDelete(form, owner) {
        const currentUser = form.querySelector('.owner-action').dataset.currentUser;
        
        if (parseInt(currentUser) !== owner) {
            alert("Vous ne pouvez pas supprimer un exercice dont vous n'êtes pas le propriétaire.");
            return false;
        }
        
        return confirm('Êtes-vous sûr de vouloir supprimer cet exercice ?');
    }
</script>
{% endblock %}
