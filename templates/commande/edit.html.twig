{% extends 'front/base.html.twig' %}

{% block title %}Edit Order #{{ commande.id }} - Sportify{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Edit Order #{{ commande.id }}</h5>
                </div>
                <div class="card-body">
                    {{ include('commande/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to list
                        </a>
                        <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 