{% extends 'front.html.twig' %}

{% block title %}Edit Order #{{ commande.id }} - Sportify{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <style>
        .edit-order-card {
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 25px;
            margin-bottom: 20px;
        }
        .edit-order-card h4 {
            color: #f36100;
            margin-bottom: 20px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .edit-order-card h4 i {
            font-size: 1.2em;
        }
        .product-preview {
            background: #222;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
        }
        .product-image {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 8px;
        }
        .form-label {
            color: #f36100;
            margin-bottom: 8px;
            font-weight: 500;
        }
        .form-control {
            background-color: #222;
            border: 1px solid #333;
            color: #fff;
            padding: 12px;
            border-radius: 4px;
        }
        .form-control:focus {
            background-color: #2a2a2a;
            border-color: #f36100;
            box-shadow: 0 0 0 0.2rem rgba(243, 97, 0, 0.25);
            color: #fff;
        }
        .form-control::placeholder {
            color: #666;
        }
        .address-input-group {
            position: relative;
            display: flex;
            align-items: stretch;
        }
        .map-button {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: #f36100;
            cursor: pointer;
            z-index: 10;
            padding: 5px;
            transition: color 0.3s;
        }
        .map-button:hover {
            color: #e85900;
        }
        #map-modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.8);
        }
        .map-modal-content {
            background-color: #1a1a1a;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #f36100;
            width: 90%;
            max-width: 800px;
            position: relative;
            border-radius: 8px;
        }
        #map {
            height: 400px;
            width: 100%;
            border-radius: 4px;
            margin-bottom: 15px;
        }
        .close-modal {
            color: #f36100;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
            transition: color 0.3s;
        }
        .close-modal:hover {
            color: #e85900;
        }
        .map-controls {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 15px;
        }
        .map-controls button {
            padding: 8px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: all 0.3s;
        }
        .map-controls button:hover {
            transform: translateY(-2px);
        }
        .confirm-location {
            background-color: #f36100;
            color: white;
        }
        .confirm-location:hover {
            background-color: #e85900;
        }
        .cancel-location {
            background-color: #333;
            color: white;
        }
        .cancel-location:hover {
            background-color: #444;
        }
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
        }
        .action-buttons button,
        .action-buttons a {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 12px 25px;
            border-radius: 4px;
            transition: all 0.3s;
        }
        .action-buttons button:hover,
        .action-buttons a:hover {
            transform: translateY(-2px);
        }
        .alert {
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            border: 1px solid rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }
    </style>
{% endblock %}

{% block body %}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg') }}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Edit Order #{{ commande.id }}</h2>
                    <div class="bt-option">
                        <a href="{{ path('app_front_index') }}">Home</a>
                        <a href="{{ path('app_commande_index') }}">My Orders</a>
                        <span>Edit Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Order Form Section Begin -->
<section class="class-details-section spad">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}

                <div class="edit-order-card">
                    <h4><i class="fas fa-box"></i> Selected Product</h4>
                    <div class="product-preview">
                        <div class="d-flex align-items-center">
                            {% if commande.produit.imagePath %}
                                <img src="{{ asset('uploads/products/' ~ commande.produit.imagePath) }}" 
                                     alt="{{ commande.produit.nom }}" 
                                     class="product-image me-3">
                            {% endif %}
                            <div>
                                <h5>{{ commande.produit.nom }}</h5>
                                <p class="mb-0">Unit Price: ${{ commande.produit.prix }}</p>
                                <p class="mb-0 text-muted">Stock Available: {{ commande.produit.quantiteStock }}</p>
                            </div>
                        </div>
                    </div>

                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                {{ form_label(form.nomClient, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.nomClient, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.nomClient.vars.errors|length ? ' is-invalid' : ''),
                                        'placeholder': 'Enter your full name'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.nomClient) }}
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                {{ form_label(form.telephone, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.telephone, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.telephone.vars.errors|length ? ' is-invalid' : ''),
                                        'placeholder': 'Enter your phone number'
                                    }
                                }) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.telephone) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.adresseLivraison, 'Delivery Address', {'label_attr': {'class': 'form-label'}}) }}
                            <div class="address-input-group">
                                {{ form_widget(form.adresseLivraison, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.adresseLivraison.vars.errors|length ? ' is-invalid' : ''),
                                        'placeholder': 'Enter your delivery address or use the map',
                                        'rows': 3
                                    }
                                }) }}
                                <button type="button" class="map-button" id="openMap" title="Choose location on map">
                                    <i class="fas fa-map-marker-alt"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback">
                                {{ form_errors(form.adresseLivraison) }}
                            </div>
                        </div>

                        <div class="mb-4">
                            {{ form_label(form.quantite, 'Quantity', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.quantite, {
                                'attr': {
                                    'class': 'form-control' ~ (form.quantite.vars.errors|length ? ' is-invalid' : ''),
                                    'min': 1,
                                    'max': commande.produit.quantiteStock
                                }
                            }) }}
                            <div class="invalid-feedback">
                                {{ form_errors(form.quantite) }}
                            </div>
                        </div>

                        <div class="action-buttons">
                            <button type="submit" class="primary-btn">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn-outline">
                                <i class="fas fa-arrow-left"></i> Back to Order
                            </a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Order Form Section End -->

<!-- Map Modal -->
<div id="map-modal">
    <div class="map-modal-content">
        <span class="close-modal">&times;</span>
        <h4 class="mb-3" style="color: #f36100;">Choose Delivery Location</h4>
        <div id="map"></div>
        <div class="map-controls">
            <button type="button" class="cancel-location">Cancel</button>
            <button type="button" class="confirm-location">Confirm Location</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
    // Set background image for breadcrumb section
    $('.set-bg').each(function() {
        var bg = $(this).data('setbg');
        $(this).css('background-image', 'url(' + bg + ')');
    });

    // Form validation
    (function () {
        'use strict'
        var forms = document.querySelectorAll('.needs-validation')
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault()
                    event.stopPropagation()
                }
                form.classList.add('was-validated')
            }, false)
        })
    })()

    // Map functionality
    document.addEventListener('DOMContentLoaded', function() {
        const modal = document.getElementById('map-modal');
        const openMapBtn = document.getElementById('openMap');
        const closeBtn = document.querySelector('.close-modal');
        const cancelBtn = document.querySelector('.cancel-location');
        const confirmBtn = document.querySelector('.confirm-location');
        let map, marker;

        function initMap() {
            map = L.map('map').setView([36.8065, 10.1815], 13); // Tunis coordinates
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '© OpenStreetMap contributors'
            }).addTo(map);

            map.on('click', function(e) {
                if (marker) {
                    map.removeLayer(marker);
                }
                marker = L.marker(e.latlng).addTo(map);
            });
        }

        openMapBtn.onclick = function() {
            modal.style.display = "block";
            setTimeout(() => {
                if (!map) {
                    initMap();
                }
            }, 100);
        }

        closeBtn.onclick = cancelBtn.onclick = function() {
            modal.style.display = "none";
        }

        confirmBtn.onclick = function() {
            if (marker) {
                const lat = marker.getLatLng().lat;
                const lng = marker.getLatLng().lng;
                fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`)
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('{{ form.adresseLivraison.vars.id }}').value = data.display_name;
                    });
            }
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    });
</script>
{% endblock %} 