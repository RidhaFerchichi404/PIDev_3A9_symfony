{% extends 'front.html.twig' %}

{% block title %}My Orders - Sportify{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .order-card {
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            transition: transform 0.3s ease;
        }
        .order-card:hover {
            transform: translateY(-5px);
            border-color: #f36100;
        }
        .status-badge {
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 0.9em;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }
        .status-pending {
            background-color: #ffc107;
            color: #000;
        }
        .status-processing {
            background-color: #17a2b8;
            color: #fff;
        }
        .status-delivered {
            background-color: #28a745;
            color: #fff;
        }
        .status-cancelled {
            background-color: #dc3545;
            color: #fff;
        }
        .order-actions {
            display: flex;
            gap: 10px;
        }
        .order-actions a {
            padding: 8px 15px;
            border-radius: 4px;
            display: inline-flex;
            align-items: center;
            gap: 5px;
            transition: all 0.3s;
        }
        .order-actions a:hover {
            transform: translateY(-2px);
        }
        .order-info {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }
        .order-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 8px;
        }
        .empty-orders {
            text-align: center;
            padding: 40px 20px;
        }
        .empty-orders i {
            font-size: 4em;
            color: #f36100;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}

{% block body %}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="{{ asset('img/breadcrumb-bg.jpg') }}">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>My Orders</h2>
                    <div class="bt-option">
                        <a href="{{ path('app_front_index') }}">Home</a>
                        <span>My Orders</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->

<!-- Orders Section Begin -->
<section class="shop-section spad">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-12">
                <div class="section-title">
                    <h2>Order History</h2>
                    <p>Track and manage your orders</p>
            </div>
        </div>
    </div>

    <div class="row">
            {% if commandes is empty %}
                <div class="col-lg-12">
                    <div class="empty-orders">
                        <i class="fas fa-box-open"></i>
                        <h3>No Orders Yet</h3>
                        <p class="text-muted mb-4">Looks like you haven't placed any orders yet.</p>
                        <a href="{{ path('app_produit_index') }}" class="primary-btn">
                            <i class="fas fa-shopping-cart me-2"></i>Start Shopping
                    </a>
                    </div>
                </div>
            {% else %}
                                {% for commande in commandes %}
                    <div class="col-lg-6">
                        <div class="order-card">
                            <div class="order-info">
                                {% if commande.produit.imagePath %}
                                    <img src="{{ asset('uploads/products/' ~ commande.produit.imagePath) }}" 
                                         alt="{{ commande.produit.nom }}"
                                         class="order-image">
                                {% endif %}
                                <div>
                                    <h4 class="mb-1">{{ commande.produit.nom }}</h4>
                                    <p class="text-muted mb-0">
                                        <i class="far fa-calendar-alt me-2"></i>
                                        {{ commande.dateCommande|date('F d, Y H:i') }}
                                    </p>
                                </div>
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <p class="mb-0">
                                        <strong>Quantity:</strong> {{ commande.quantite }}
                                    </p>
                                    <p class="mb-0">
                                        <strong>Total:</strong> ${{ (commande.produit.prix * commande.quantite)|number_format(2, '.', ',') }}
                                    </p>
                                </div>
                                <div>
                                            {% if commande.statutCommande == 'En attente' %}
                                        <span class="status-badge status-pending">
                                                    <i class="fas fa-clock"></i> Pending
                                                </span>
                                            {% elseif commande.statutCommande == 'En cours' %}
                                        <span class="status-badge status-processing">
                                                    <i class="fas fa-spinner fa-spin"></i> Processing
                                                </span>
                                            {% elseif commande.statutCommande == 'Livrée' %}
                                        <span class="status-badge status-delivered">
                                                    <i class="fas fa-check"></i> Delivered
                                                </span>
                                    {% elseif commande.statutCommande == 'Annulée' %}
                                        <span class="status-badge status-cancelled">
                                            <i class="fas fa-times"></i> Cancelled
                                        </span>
                                            {% endif %}
                                </div>
                            </div>

                            <div class="order-actions">
                                                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" 
                                   class="btn-outline">
                                    <i class="fas fa-eye"></i> View Details
                                                </a>
                                                {% if commande.statutCommande == 'En attente' %}
                                                    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" 
                                       class="primary-btn">
                                        <i class="fas fa-edit"></i> Edit Order
                                                    </a>
                                                {% endif %}
                                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
    </div>
</section>
<!-- Orders Section End -->
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    // Set background image for breadcrumb section
    $('.set-bg').each(function() {
        var bg = $(this).data('setbg');
        $(this).css('background-image', 'url(' + bg + ')');
    });
</script>
{% endblock %} 