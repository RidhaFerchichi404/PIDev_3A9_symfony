{% extends 'base.html.twig' %}

{% block title %}Nouvelle Promotion{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Créer une nouvelle promotion</h1>
        
        {% if form is defined %}
            {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
            
                {% if not form.vars.valid %}
                    <div class="alert alert-danger">
                        {{ form_errors(form) }}
                        {% for child in form.children %}
                            {% if child.vars.errors is defined and child.vars.errors|length %}
                                {{ form_label(child) }}
                                {{ form_errors(child) }}
                            {% endif %}
                        {% endfor %}
                    </div>
                {% endif %}
                
                <div class="row g-3">
                    <div class="col-md-6">
                        {{ form_row(form.codePromo, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: ETE2023',
                                'required': 'required'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.valeurReduction, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex: 20 pour 20%',
                                'required': 'required'
                            }
                        }) }}
                    </div>
                    
                    <div class="col-md-6">
                        {{ form_row(form.dateDebut, {
                            'attr': {
                                'class': 'form-control',
                                'required': 'required'
                            }
                        }) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.dateFin, {
                            'attr': {
                                'class': 'form-control',
                                'required': 'required'
                            }
                        }) }}
                    </div>

                    {% if form.abonnement is defined %}
                    <div class="col-md-12">
                        {{ form_row(form.abonnement, {
                            'attr': {
                                'class': 'form-select'
                            }
                        }) }}
                    </div>
                    {% endif %}
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i> Enregistrer
                    </button>
                    <a href="{{ path('app_promotion_index') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                    </a>
                </div>
            {{ form_end(form) }}
        {% else %}
            <div class="alert alert-danger">
                Le formulaire n'est pas disponible.
                <a href="{{ path('app_promotion_new') }}" class="alert-link">Actualiser la page</a>
            </div>
        {% endif %}
    </div>
{% endblock %}