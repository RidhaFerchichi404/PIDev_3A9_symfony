{% extends 'base.html.twig' %}

{% block title %}Détails de l'Abonnement{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de l'Abonnement</h1>

        <div class="card">
            <div class="card-body">
                <table class="table table-striped">
                    <tbody>
                        <tr>
                            <th class="w-25">ID</th>
                            <td>{{ abonnement.AbonnementID }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ abonnement.Nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ abonnement.Description }}</td>
                        </tr>
                        <tr>
                            <th>Durée (jours)</th>
                            <td>{{ abonnement.Duree }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ abonnement.Prix|number_format(2, ',', ' ') }} €</td>
                        </tr>
                        
                        <tr>
                            <th>Salle de sport</th>
                            <td>
                                
                                    {{ abonnement.salleName}} 
                                
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-4">
            <a href="{{ path('app_abonnement_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Retour à la liste
            </a>

            <a href="{{ path('app_abonnement_edit', {'AbonnementID': abonnement.AbonnementID}) }}" class="btn btn-primary">
                <i class="fas fa-edit"></i> Modifier
            </a>

            {{ include('abonnement/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}