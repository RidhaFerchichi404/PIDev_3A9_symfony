{% extends 'base.html.twig' %}

{% block title %}Modifier Abonnement #{{ abonnement.AbonnementID }}{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">Modifier Abonnement "{{ abonnement.Nom }}"</h1>

    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
        {{ form_widget(form) }}
        <button class="btn btn-warning">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}

    <div class="mt-3">
        <a href="{{ path('app_abonnement_show', {'AbonnementID': abonnement.AbonnementID}) }}" 
           class="btn btn-info">
            Voir détails
        </a>
        <a href="{{ path('app_abonnement_index') }}" class="btn btn-secondary ms-2">
            Retour à la liste
        </a>
    </div>
</div>
{% endblock %}