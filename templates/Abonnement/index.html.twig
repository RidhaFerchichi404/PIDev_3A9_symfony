{% extends 'base.html.twig' %}

{% block title %}Liste des Abonnements{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des Abonnements</h1>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NOM</th>
                    <th>PRIX</th>
                    <th>DURÉE</th>
                    <th>DESCRIPTION</th>
                    <th>SALLE</th>
                    <th>ACTIONS</th>
                </tr>
            </thead>
            <tbody>
                {% for abonnement in abonnements %}
                    <tr>
                        <td>{{ abonnement.AbonnementID }}</td>
                        <td>{{ abonnement.Nom }}</td>
                        <td>{{ abonnement.Prix|number_format(2, ',', ' ') }} DT</td>
                        <td>{{ abonnement.Duree }} jours</td>
                        <td>{{ abonnement.Description|u.truncate(30, '...') }}</td>
                        <td>{{ abonnement.salleName }}</td>
                        <td class="d-flex">
                            <a href="{{ path('app_abonnement_edit', {'AbonnementID': abonnement.AbonnementID}) }}" 
                               class="btn btn-sm btn-primary mr-2">
                                <i class="fas fa-edit"></i> Modifier
                            </a>
                            
                            <a href="{{ path('app_abonnement_promotions', {'id': abonnement.AbonnementID}) }}" 
                               class="btn btn-sm btn-info mr-2">
                                <i class="fas fa-tags"></i> Promotions
                            </a>
                            
                            <form method="post" action="{{ path('app_abonnement_delete', {'AbonnementID': abonnement.AbonnementID}) }}" 
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet abonnement?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ abonnement.AbonnementID) }}">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Supprimer
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_abonnement_new') }}" class="btn btn-success mt-3">
            <i class="fas fa-plus"></i> Créer un nouvel abonnement
        </a>
    </div>
{% endblock %}