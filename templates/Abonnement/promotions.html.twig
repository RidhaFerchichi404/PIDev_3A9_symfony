{% extends 'base.html.twig' %}

{% block title %}Promotions pour {{ abonnement.Nom }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
            color: black;
        }
        .badge-discount {
            background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
            font-size: 1rem;
            padding: 0.5em 0.75em;
            color: black;
        }
        .action-buttons .btn {
            width: 40px;
            height: 40px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin: 0 3px;
        }
        .table-responsive {
            overflow-x: auto;
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h1 class="display-5 fw-bold">
                <i class="fas fa-tag me-2"></i>Promotions pour {{ abonnement.Nom }}
            </h1>
            <p class="text-muted">Gestion des promotions associées à cet abonnement</p>
        </div>
        <a href="{{ path('app_promotion_new', {'abonnement_id': abonnement.AbonnementID}) }}" 
           class="btn btn-success btn-lg">
            <i class="fas fa-plus me-2"></i>Nouvelle promotion
        </a>
    </div>

    <div class="card card-hover mb-5 border-0 shadow-sm">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-money-bill-wave text-primary fs-4 me-3"></i>
                        <div>
                            <h6 class="mb-0 text-muted">Prix</h6>
                            <p class="mb-0 fw-bold fs-5">{{ abonnement.Prix|number_format(2, ',', ' ') }} DT</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-calendar-alt text-success fs-4 me-3"></i>
                        <div>
                            <h6 class="mb-0 text-muted">Durée</h6>
                            <p class="mb-0 fw-bold fs-5">{{ abonnement.Duree }} jours</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-building text-info fs-4 me-3"></i>
                        <div>
                            <h6 class="mb-0 text-muted">Salle</h6>
                            <p class="mb-0 fw-bold fs-5">{{ abonnement.salleName }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>Liste des promotions
            </h5>
        </div>
        <div class="card-body">
            {% if promotions|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="text-nowrap">#ID</th>
                                <th>Réduction</th>
                                <th>Période</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for promotion in promotions %}
                                <tr>
                                    <td class="fw-bold">{{ promotion.id }}</td>
                                    <td>
                                        <span class="badge badge-discount text-black rounded-pill">
                                            {{ promotion.valeurReduction }}% de réduction
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span class="fw-bold">{{ promotion.DateDebut|date('d/m/Y') }}</span>
                                            <small class="text-muted">au {{ promotion.DateFin|date('d/m/Y') }}</small>
                                        </div>
                                    </td>
                                    <td class="text-end action-buttons">
                                        <a href="{{ path('app_promotion_edit', {'id': promotion.id}) }}" 
                                           class="btn btn-primary btn-sm"
                                           data-bs-toggle="tooltip" 
                                           title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" 
                                              action="{{ path('app_promotion_delete', {'id': promotion.id}) }}" 
                                              style="display: inline-block;" 
                                              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette promotion?');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ promotion.id) }}">
                                            <button class="btn btn-danger btn-sm"
                                                    data-bs-toggle="tooltip" 
                                                    title="Supprimer">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-tag fa-4x text-muted mb-4"></i>
                    <h5 class="fw-bold">Aucune promotion disponible</h5>
                    <p class="text-muted">Créez votre première promotion pour cet abonnement</p>
                    <a href="{{ path('app_promotion_new', {'abonnement_id': abonnement.AbonnementID}) }}" 
                       class="btn btn-primary mt-3">
                        <i class="fas fa-plus me-2"></i>Ajouter une promotion
                    </a>
                </div>
            {% endif %}
        </div>
    </div>

    <div class="mt-4 text-center">
        <a href="{{ path('app_abonnement_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Retour aux abonnements
        </a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // Active les tooltips Bootstrap
        $(function () {
            $('[data-bs-toggle="tooltip"]').tooltip()
        })
    </script>
{% endblock %}