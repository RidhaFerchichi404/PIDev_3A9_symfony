{% extends 'front/base.html.twig' %}

{% block title %}Products - Sportify{% endblock %}

{% block page_title %}Liste des produits{% endblock %}

{% block page_actions %}
    {% if isAdmin %}
        <a href="{{ path('app_produit_new') }}" class="btn btn-primary">
            + Ajouter un produit
        </a>
    {% endif %}
{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-12">
            <input type="text" id="searchInput" class="form-control" placeholder="Search products...">
        </div>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4" id="productList">
        {% for produit in produits %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    {% if produit.imagePath %}
                        <img src="{{ asset('uploads/images/' ~ produit.imagePath) }}" class="card-img-top" alt="{{ produit.nom }}" style="height: 180px; object-fit: cover;">
                    {% else %}
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 180px;">
                            <span class="text-muted">No image</span>
                        </div>
                    {% endif %}
                    <div class="card-body p-3">
                        <h6 class="card-title mb-2">{{ produit.nom }}</h6>
                        <p class="card-text mb-2">
                            <strong class="text-primary">{{ produit.prix|number_format(2, '.', ',') }} DT</strong>
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <small class="text-muted">Stock:</small>
                            {% if produit.quantiteStock == 0 %}
                                <span class="badge bg-danger">Out of stock</span>
                            {% elseif produit.quantiteStock < 10 %}
                                <span class="badge bg-warning text-dark">{{ produit.quantiteStock }}</span>
                            {% else %}
                                <span class="badge bg-success">{{ produit.quantiteStock }}</span>
                            {% endif %}
                        </div>
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">Status:</small>
                            {% if produit.disponible %}
                                <span class="badge bg-success">Available</span>
                            {% else %}
                                <span class="badge bg-danger">Unavailable</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="card-footer bg-transparent p-3">
                        {% if produit.disponible and produit.quantiteStock > 0 %}
                            <a href="{{ path('app_commande_new', {'produit': produit.id}) }}" class="btn btn-primary w-100 mb-2">
                                üõí Order Now
                            </a>
                        {% endif %}
                        <div class="btn-group w-100" role="group">
                            <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-outline-info btn-sm" title="Details">
                                üëÅÔ∏è
                            </a>
                            {% if isAdmin %}
                                <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-outline-warning btn-sm" title="Edit">
                                    ‚úèÔ∏è
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal{{ produit.id }}" title="Delete">
                                    üóëÔ∏è
                                </button>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

<!-- Delete Modal -->
{% for produit in produits %}
    <div class="modal fade" id="deleteModal{{ produit.id }}" tabindex="-1" aria-labelledby="deleteModalLabel{{ produit.id }}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="deleteModalLabel{{ produit.id }}">Confirmation de suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>√ätes-vous s√ªr de vouloir supprimer le produit <strong>{{ produit.nom }}</strong> ?</p>
                    <p class="text-danger"><small>Cette action est irr√©versible.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('app_produit_delete', {'id': produit.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        $("#searchInput").on("keyup", function() {
            var value = $(this).val().toLowerCase();
            $("#productList .col").filter(function() {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
{% endblock %} 