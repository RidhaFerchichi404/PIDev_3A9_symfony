{% extends 'front/base.html.twig' %}

{% block title %}Edit Product - {{ produit.nom }} - Sportify{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Edit Product #{{ produit.id }}</h5>
                </div>
                <div class="card-body">
                    {{ include('produit/_form.html.twig', {'button_label': 'Update'}) }}
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        <a href="{{ path('app_produit_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to list
                        </a>
                        <a href="{{ path('app_produit_show', {'id': produit.id}) }}" class="btn btn-info">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %} 