{% extends 'base.html.twig' %}

{% block title %}New User{% endblock %}

{% block stylesheets %}
<style>
    .page-header {
        margin-bottom: 2rem;
    }
    
    .user-new-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: none;
        transition: all 0.3s ease;
    }
    
    .user-new-card:hover {
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
    }
    
    .user-new-card .card-header {
        background: linear-gradient(135deg, #3CCFCF, #2EBBBB);
        color: #fff;
        border: none;
        padding: 1.5rem;
    }
    
    .user-new-card .card-body {
        padding: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: #333;
    }
    
    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid rgba(0,0,0,0.1);
        background-color: #f8f9fa;
        transition: all 0.2s ease;
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(60, 207, 207, 0.25);
        border-color: #3CCFCF;
        background-color: white;
    }
    
    .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid rgba(0,0,0,0.1);
        background-color: #f8f9fa;
    }
    
    .form-select:focus {
        box-shadow: 0 0 0 3px rgba(60, 207, 207, 0.25);
        border-color: #3CCFCF;
        background-color: white;
    }
    
    .btn-save {
        background: linear-gradient(135deg, #3CCFCF, #2EBBBB);
        color: #fff;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-save:hover {
        background: linear-gradient(135deg, #2EBBBB, #3CCFCF);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(60, 207, 207, 0.3);
    }
    
    .btn-cancel {
        background-color: #f8f9fa;
        color: #333;
        border: 1px solid rgba(0,0,0,0.1);
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-cancel:hover {
        background-color: #e9ecef;
        transform: translateY(-3px);
    }
    
    .form-check-input:checked {
        background-color: #ffcc00;
        border-color: #ffcc00;
    }
    
    .invalid-feedback {
        color: #ff3b30;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }
    
    .is-invalid {
        border-color: #ff3b30;
    }
    
    .is-invalid:focus {
        box-shadow: 0 0 0 3px rgba(255, 59, 48, 0.25);
        border-color: #ff3b30;
    }
    
    .card-footer {
        background-color: #f8f9fa;
        border-top: 1px solid rgba(0,0,0,0.05);
        padding: 1.5rem 2rem;
    }
    
    .section-divider {
        margin: 2rem 0;
        border-top: 1px solid rgba(0,0,0,0.05);
        position: relative;
    }
    
    .section-divider span {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        background-color: white;
        padding: 0 1rem;
        color: #6c757d;
        font-size: 0.875rem;
    }
    
    .steps-progress {
        display: flex;
        justify-content: space-between;
        margin-bottom: 2rem;
    }
    
    .steps-progress-item {
        flex: 1;
        text-align: center;
        position: relative;
    }
    
    .steps-progress-item::before {
        content: '';
        position: absolute;
        top: 15px;
        left: 0;
        right: 0;
        height: 3px;
        background-color: #e9ecef;
        z-index: 0;
    }
    
    .steps-progress-item:first-child::before {
        left: 50%;
    }
    
    .steps-progress-item:last-child::before {
        right: 50%;
    }
    
    .steps-progress-item.active::before,
    .steps-progress-item.completed::before {
        background-color: #ffcc00;
    }
    
    .steps-progress-step {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        background-color: #e9ecef;
        color: #6c757d;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 0.5rem;
        position: relative;
        z-index: 1;
    }
    
    .steps-progress-item.active .steps-progress-step,
    .steps-progress-item.completed .steps-progress-step {
        background-color: #ffcc00;
        color: #333;
    }
    
    .steps-progress-item.completed .steps-progress-step {
        background-color: #ffcc00;
    }
    
    .steps-progress-text {
        font-size: 0.875rem;
        color: #6c757d;
    }
    
    .steps-progress-item.active .steps-progress-text,
    .steps-progress-item.completed .steps-progress-text {
        color: #333;
        font-weight: 500;
    }
</style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">Create New User</h1>
                <p class="text-muted">Add a new user to the system</p>
            </div>
            <div>
                <a href="{{ path('app_user_index') }}" class="btn btn-cancel">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show mb-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="steps-progress mb-4">
        <div class="steps-progress-item active">
            <div class="steps-progress-step">1</div>
            <div class="steps-progress-text">Basic Info</div>
        </div>
        <div class="steps-progress-item">
            <div class="steps-progress-step">2</div>
            <div class="steps-progress-text">Account Setup</div>
        </div>
        <div class="steps-progress-item">
            <div class="steps-progress-step">3</div>
            <div class="steps-progress-text">Confirmation</div>
        </div>
    </div>

    <div class="card user-new-card">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-user-plus me-2"></i>
                New User Details
            </h5>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.first_name, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.first_name, {'attr': {'class': 'form-control', 'placeholder': 'Enter first name'}}) }}
                    {{ form_errors(form.first_name) }}
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.last_name, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Enter last name'}}) }}
                    {{ form_errors(form.last_name) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter email address'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.phone_number, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.phone_number, {'attr': {'class': 'form-control', 'placeholder': 'Enter phone number'}}) }}
                    {{ form_errors(form.phone_number) }}
                </div>
            </div>
            
            <div class="section-divider">
                <span>ACCOUNT SETTINGS</span>
            </div>
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.password_hash, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password_hash, {'attr': {'class': 'form-control', 'placeholder': 'Enter password'}}) }}
                    {{ form_errors(form.password_hash) }}
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.role, 'User Role', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.role) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 form-group">
                    <div class="form-check form-switch mt-4">
                        {{ form_widget(form.isactive, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isactive, 'Active Account', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                </div>
            </div>
            
            <div class="card-footer text-end">
                <a href="{{ path('app_user_index') }}" class="btn btn-cancel me-2">Cancel</a>
                <button type="submit" class="btn btn-save">
                    <i class="fas fa-save me-2"></i>Create User
                </button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
