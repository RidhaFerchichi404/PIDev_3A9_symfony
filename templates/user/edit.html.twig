{% extends 'base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block stylesheets %}
<style>
    :root {
        --primary-color: #3CCFCF;
        --secondary-color: #2EBBBB;
        --accent-color: #4cc417; /* Green for save button */
        --danger-color: #dc3545; /* Red for delete button */
        --light-gray: #f3f4f6;
    }
    
    .page-header {
        margin-bottom: 2rem;
    }
    
    .user-edit-card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        border: none;
        transition: all 0.3s ease;
    }
    
    .user-edit-card:hover {
        box-shadow: 0 15px 40px rgba(0,0,0,0.1);
    }
    
    .user-edit-card .card-header {
        background: linear-gradient(135deg, #3CCFCF, #2EBBBB);
        color: #fff;
        border: none;
        padding: 1.5rem;
    }
    
    .user-edit-card .card-body {
        padding: 2rem;
    }
    
    .form-group {
        margin-bottom: 1.5rem;
    }
    
    .form-label {
        font-weight: 500;
        margin-bottom: 0.5rem;
        color: #333;
    }
    
    .form-control {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid rgba(0,0,0,0.1);
        background-color: #f8f9fa;
        transition: all 0.2s ease;
    }
    
    .form-control:focus {
        box-shadow: 0 0 0 3px rgba(60, 207, 207, 0.25);
        border-color: #3CCFCF;
        background-color: white;
    }
    
    .form-select {
        border-radius: 8px;
        padding: 0.75rem 1rem;
        border: 1px solid rgba(0,0,0,0.1);
        background-color: #f8f9fa;
    }
    
    .form-select:focus {
        box-shadow: 0 0 0 3px rgba(60, 207, 207, 0.25);
        border-color: #3CCFCF;
        background-color: white;
    }
    
    .btn-save {
        background: linear-gradient(135deg, #5ed13f, #4cc417); /* Green gradient */
        color: #fff;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-save:hover {
        background: linear-gradient(135deg, #4cc417, #5ed13f);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(76, 196, 23, 0.3);
    }
    
    .btn-delete {
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-delete:hover {
        background-color: #c82333;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(220, 53, 69, 0.3);
    }
    
    .btn-cancel {
        background-color: #6c757d;
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-cancel:hover {
        background-color: #5a6268;
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(108, 117, 125, 0.3);
    }
    
    .password-note {
        font-style: italic;
        color: #6c757d;
        font-size: 0.875rem;
        margin-top: 0.5rem;
    }
    
    .form-check-input:checked {
        background-color: var(--primary-color);
        border-color: var(--primary-color);
    }
    
    .badge {
        padding: 0.4rem 0.7rem;
        font-weight: 500;
        border-radius: 4px;
    }
    
    .badge-admin {
        background-color: #FF8C00; /* Orange to match index page */
        color: white;
    }
    
    .badge-user {
        background-color: #3CCFCF;
        color: white;
    }
    
    .badge-active {
        background-color: #4cc417; /* Green to match index page */
        color: white;
    }
    
    .badge-inactive {
        background-color: #9ca3af;
        color: white;
    }
    
    .alert-info {
        background-color: rgba(60, 207, 207, 0.1);
        border-color: rgba(60, 207, 207, 0.2);
        color: #333;
    }
    
    .card-header {
        background-color: white;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        padding: 1rem 1.5rem;
        font-weight: 500;
    }
    
    .card-body {
        padding: 1.5rem;
    }
    
    .section-divider {
        margin: 2rem 0;
        border-top: 1px solid rgba(0,0,0,0.05);
        position: relative;
    }
</style>
{% endblock %}

{% block body %}
<div class="container-fluid py-4">
    <div class="page-header mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-0">Edit User</h2>
                <p class="text-muted">Update user information and settings</p>
            </div>
            <div class="d-flex">
                <a href="{{ path('app_user_index') }}" class="btn btn-cancel me-2">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                {{ include('user/_delete_form.html.twig', {'button_label': 'Delete', 'button_class': 'btn btn-danger'}) }}
            </div>
        </div>
    </div>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show mb-4" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="card user-edit-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-user-edit me-2"></i>
                User Information
            </h5>
            <div>
                {% if user.role == 'ROLE_ADMIN' %}
                    <span class="badge badge-admin"><i class="fas fa-shield-alt me-1"></i>Admin</span>
                {% else %}
                    <span class="badge badge-user"><i class="fas fa-user me-1"></i>User</span>
                {% endif %}
                
                {% if user.isactive %}
                    <span class="badge badge-active"><i class="fas fa-check-circle me-1"></i>Active</span>
                {% else %}
                    <span class="badge badge-inactive"><i class="fas fa-times-circle me-1"></i>Inactive</span>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.first_name, 'First Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.first_name, {'attr': {'class': 'form-control', 'placeholder': 'Enter first name'}}) }}
                    {{ form_errors(form.first_name) }}
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.last_name, 'Last Name', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.last_name, {'attr': {'class': 'form-control', 'placeholder': 'Enter last name'}}) }}
                    {{ form_errors(form.last_name) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.email, 'Email Address', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter email address'}}) }}
                    {{ form_errors(form.email) }}
                </div>
                <div class="col-md-6 form-group">
                    {{ form_label(form.phone_number, 'Phone Number', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.phone_number, {'attr': {'class': 'form-control', 'placeholder': 'Enter phone number'}}) }}
                    {{ form_errors(form.phone_number) }}
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.role, 'User Role', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.role, {'attr': {'class': 'form-select'}}) }}
                    {{ form_errors(form.role) }}
                </div>
                <div class="col-md-6 form-group">
                    <div class="form-check form-switch mt-4 pt-2">
                        {{ form_widget(form.isactive, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(form.isactive, 'Active Account', {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>
                </div>
            </div>
            
            <div class="section-divider"></div>
            
            <div class="row">
                <div class="col-md-6 form-group">
                    {{ form_label(form.password_hash, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.password_hash, {'attr': {'class': 'form-control', 'placeholder': 'Enter new password'}}) }}
                    {{ form_errors(form.password_hash) }}
                    <small class="text-muted">Leave empty to keep current password</small>
                </div>
            </div>
            
            <div class="d-flex justify-content-end mt-4">
                <a href="{{ path('app_user_index') }}" class="btn btn-cancel me-2">Cancel</a>
                <button type="submit" class="btn btn-save">
                    <i class="fas fa-save me-1"></i>Save Changes
                </button>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
 