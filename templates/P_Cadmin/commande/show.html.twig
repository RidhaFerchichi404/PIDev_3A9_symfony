{% extends 'base.html.twig' %}

{% block title %}Order Details - Sportify Admin{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>Order Details</h1>
                <p class="text-muted">View and manage order information</p>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_admin_commande_edit', {'id': commande.id}) }}" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Edit Order
                </a>
                <a href="{{ path('app_admin_commande_index') }}" class="btn btn-outline">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12">
                            <div class="d-flex align-items-center">
                                {% if commande.produit.imagePath %}
                                    <img src="{{ asset('uploads/products/' ~ commande.produit.imagePath) }}" 
                                         alt="{{ commande.produit.nom }}"
                                         class="rounded me-3"
                                         style="width: 64px; height: 64px; object-fit: cover;">
                                {% else %}
                                    <div class="rounded me-3 bg-light d-flex align-items-center justify-content-center" 
                                         style="width: 64px; height: 64px;">
                                        <i class="fas fa-box text-muted"></i>
                                    </div>
                                {% endif %}
                                <div>
                                    <h5 class="mb-1">{{ commande.produit.nom }}</h5>
                                    <p class="mb-0 text-muted">${{ commande.produit.prix|number_format(2, '.', ',') }} × {{ commande.quantite }}</p>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted">Order ID</label>
                                <h6>#{{ commande.id }}</h6>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted">Order Date</label>
                                <h6>{{ commande.dateCommande|date('M d, Y H:i') }}</h6>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted">Customer Name</label>
                                <h6>{{ commande.nomClient }}</h6>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted">Phone Number</label>
                                <h6>{{ commande.telephone }}</h6>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="info-item">
                                <label class="text-muted">Delivery Address</label>
                                <h6>{{ commande.adresseLivraison }}</h6>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted">Order Status</label>
                                <div>
                                    {% set statusClass = {
                                        'En attente': 'warning',
                                        'En cours': 'info',
                                        'Livrée': 'success',
                                        'Annulée': 'danger'
                                    } %}
                                    <span class="badge bg-{{ statusClass[commande.statutCommande] ?? 'secondary' }}">
                                        {{ commande.statutCommande }}
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-item">
                                <label class="text-muted">Total Amount</label>
                                <h6>${{ (commande.produit.prix * commande.quantite)|number_format(2, '.', ',') }}</h6>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Danger Zone</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Once you delete an order, there is no going back. Please be certain.</p>
                    <form method="post" action="{{ path('app_admin_commande_delete', {'id': commande.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this order? This action cannot be undone.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .info-item {
            margin-bottom: 1rem;
        }
        .info-item label {
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            display: block;
        }
        .info-item h6 {
            margin-bottom: 0;
        }
    </style>
{% endblock %} 