{% extends 'base.html.twig' %}

{% block title %}Edit Order - Sportify Admin{% endblock %}

{% block body %}
    <div class="page-header">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1>Edit Order</h1>
                <p class="text-muted">Modify order information</p>
            </div>
            <div class="d-flex gap-2">
                <a href="{{ path('app_admin_commande_show', {'id': commande.id}) }}" class="btn btn-info">
                    <i class="fas fa-eye me-2"></i>View Details
                </a>
                <a href="{{ path('app_admin_commande_index') }}" class="btn btn-outline">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-8 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    {{ include('P_Cadmin/commande/_form.html.twig', {'button_label': 'Save Changes'}) }}
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Danger Zone</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted mb-3">Once you delete an order, there is no going back. Please be certain.</p>
                    <form method="post" action="{{ path('app_admin_commande_delete', {'id': commande.id}) }}" 
                          onsubmit="return confirm('Are you sure you want to delete this order? This action cannot be undone.');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
                        <button class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Delete Order
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 