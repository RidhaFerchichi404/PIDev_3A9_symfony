{% extends 'base.html.twig' %}

{% block title %}Post index{% endblock %}

{% block body %}
    <h1>Post index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Idp</th>
                <th>Description</th>
                <th>DateU</th>
                <th>Image</th>
                <th>Type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td>{{ post.description }}</td>
                <td>{{ post.dateU ? post.dateU|date('Y-m-d') : '' }}</td>
                <td>{{ post.image }}</td>
                <td>{{ post.type }}</td>
                <td>
                    <a href="{{ path('app_post_show', {'idp': post.id}) }}">show</a>
                    <a href="{{ path('app_post_edit', {'idp': post.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_post_new') }}">Create new</a>
{% endblock %}
